<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
        <record id="action_qaco_client_acceptance" model="ir.actions.act_window">
            <field name="name">Client Acceptance &amp; Continuance</field>
            <field name="res_model">qaco.client.acceptance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html"><![CDATA[
                <p class="o_view_nocontent_smiling_face">
                    Create your client acceptance file and record approvals before moving into planning.
                </p>
            ]]></field>
        </record>

        <record id="view_qaco_client_acceptance_tree" model="ir.ui.view">
            <field name="name">qaco.client.acceptance.tree</field>
            <field name="model">qaco.client.acceptance</field>
            <field name="arch" type="xml">
                <tree string="Client Acceptance &amp; Continuance" default_order="create_date desc">
                    <field name="name"/>
                    <field name="audit_id"/>
                    <field name="client_id"/>
                    <field name="overall_engagement_risk"/>
                    <field name="decision"/>
                    <field name="state"/>
                    <field name="engagement_partner_id"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="view_qaco_client_acceptance_form" model="ir.ui.view">
            <field name="name">qaco.client.acceptance.form</field>
            <field name="model">qaco.client.acceptance</field>
            <field name="arch" type="xml">
                <form string="Client Acceptance &amp; Continuance" create="1" edit="1">
                    <header>
                        <field name="name" readonly="1"/>
                        <field name="audit_id"/>
                        <field name="client_id"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,under_review,approved,rejected"/>
                        <field name="overall_engagement_risk"/>
                        <field name="decision"/>
                        <button name="action_submit_review" type="object" string="Submit for Review" class="btn-secondary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" type="object" string="Approve" class="btn-success" attrs="{'invisible': [('state', '!=', 'under_review')]}"/>
                        <button name="action_reject" type="object" string="Reject" class="btn-danger" attrs="{'invisible': [('state', '!=', 'under_review')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="company_id"/>
                        </group>
                        <notebook>
                            <page string="Basic Client &amp; Engagement Info">
                                <group>
                                    <group>
                                        <field name="legal_name"/>
                                        <field name="registration_no"/>
                                        <field name="ntn"/>
                                        <field name="strn"/>
                                        <field name="legal_form"/>
                                    </group>
                                    <group>
                                        <field name="industry_sector"/>
                                        <field name="regulator_type"/>
                                        <field name="is_pie"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="financial_year_end"/>
                                        <field name="engagement_type"/>
                                        <field name="reporting_framework"/>
                                    </group>
                                    <group>
                                        <field name="is_first_year_engagement"/>
                                        <field name="previous_auditor_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Lead &amp; Initial Request">
                                <group>
                                    <group>
                                        <field name="lead_source"/>
                                        <field name="expected_fee_range"/>
                                    </group>
                                    <group>
                                        <field name="basic_kyc_obtained"/>
                                        <field name="services_clearly_defined"/>
                                        <field name="conflict_check_initiated"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="business_overview"/>
                                    <field name="initial_red_flags"/>
                                </group>
                            </page>
                            <page string="Pre-Acceptance Risk Assessment">
                                <group string="Integrity &amp; Reputation">
                                    <field name="ownership_structure_summary"/>
                                    <field name="pep_sanction_check_done"/>
                                    <field name="pep_sanction_findings"/>
                                    <field name="adverse_media_found"/>
                                    <field name="adverse_media_summary"/>
                                    <field name="regulatory_history_summary"/>
                                </group>
                                <group string="AML / CTF">
                                    <group>
                                        <field name="aml_risk_level"/>
                                        <field name="cdd_completed"/>
                                        <field name="beneficial_owners_verified"/>
                                    </group>
                                    <group>
                                        <field name="suspicious_indicators"/>
                                        <field name="aml_escalation_required"/>
                                    </group>
                                </group>
                                <group string="NOCLAR">
                                    <field name="noclar_indicators_present"/>
                                    <field name="noclar_summary"/>
                                    <field name="noclar_action_plan"/>
                                </group>
                            </page>
                            <page string="Independence &amp; Conflicts">
                                <group>
                                    <group>
                                        <field name="independence_threat_self_interest"/>
                                        <field name="independence_threat_self_review"/>
                                        <field name="independence_threat_advocacy"/>
                                    </group>
                                    <group>
                                        <field name="independence_threat_familiarity"/>
                                        <field name="independence_threat_intimidation"/>
                                        <field name="non_audit_services_summary"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="relationships_affecting_independence"/>
                                    <field name="independence_safeguards"/>
                                    <field name="independence_acceptable"/>
                                </group>
                                <group>
                                    <field name="conflict_of_interest_identified"/>
                                    <field name="conflict_details"/>
                                    <field name="conflict_client_consents"/>
                                </group>
                            </page>
                            <page string="Previous Auditor Communication">
                                <group>
                                    <field name="clearance_letter_sent"/>
                                    <field name="clearance_letter_date"/>
                                    <field name="clearance_letter_mode"/>
                                </group>
                                <group>
                                    <field name="clearance_response_received"/>
                                    <field name="clearance_response_date"/>
                                </group>
                                <group>
                                    <field name="clearance_response_summary"/>
                                    <field name="no_response_followup"/>
                                </group>
                            </page>
                            <page string="Engagement Risk Evaluation">
                                <group colspan="2">
                                    <group>
                                        <field name="inherent_client_risk"/>
                                        <field name="control_environment_risk"/>
                                        <field name="litigation_regulatory_risk"/>
                                    </group>
                                    <group>
                                        <field name="going_concern_indicators"/>
                                        <field name="going_concern_summary"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="overall_engagement_risk"/>
                                    <field name="risk_score"/>
                                </group>
                            </page>
                            <page string="Decision &amp; Approvals">
                                <group>
                                    <group>
                                        <field name="engagement_status"/>
                                        <field name="decision"/>
                                    </group>
                                    <group>
                                        <field name="decision_reason"/>
                                        <field name="decision_conditions"/>
                                    </group>
                                </group>
                                <group string="Approvals">
                                    <group>
                                        <field name="engagement_partner_id"/>
                                        <field name="engagement_partner_decision_date"/>
                                    </group>
                                    <group>
                                        <field name="quality_partner_id"/>
                                        <field name="quality_partner_review_required"/>
                                        <field name="quality_partner_review_date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
</data></odoo>
