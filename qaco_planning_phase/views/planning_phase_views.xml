<odoo>
    <data>
        <!-- Planning Phase Tree View -->
        <record id="view_planning_phase_tree" model="ir.ui.view">
            <field name="name">qaco.planning.phase.tree</field>
            <field name="model">qaco.planning.phase</field>
            <field name="arch" type="xml">
                <tree string="Planning Phase">
                    <field name="name"/>
                    <field name="audit_id"/>
                    <field name="client_id"/>
                    <field name="client_partner_id"/>
                    <field name="reporting_period_start"/>
                    <field name="reporting_period_end"/>
                    <field name="legal_form"/>
                    <field name="entity_classification"/>
                    <field name="industry_sector_id"/>
                    <field name="partner_id"/>
                    <field name="acceptance_state"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="state"/>
                    <field name="create_date"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Planning Phase Kanban View -->
        <record id="view_planning_phase_kanban" model="ir.ui.view">
            <field name="name">qaco.planning.phase.kanban</field>
            <field name="model">qaco.planning.phase</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="audit_id"/>
                    <field name="client_id"/>
                    <field name="state"/>
                    <field name="progress"/>
                    <field name="partner_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <span class="float-end badge rounded-pill" t-attf-class="badge-{{record.state.raw_value == 'approved' ? 'success' : record.state.raw_value == 'review' ? 'warning' : 'info'}}">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="audit_id"/>
                                    <br/>
                                    <field name="client_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="partner_id" widget="many2one_avatar_user"/>
                                        Progress: <field name="progress"/>%
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Planning Phase Form View -->
        <record id="view_planning_phase_form" model="ir.ui.view">
            <field name="name">qaco.planning.phase.form</field>
            <field name="model">qaco.planning.phase</field>
            <field name="arch" type="xml">
                <form string="Planning Phase">
                    <header>
                        <button name="action_start_planning" string="Start Planning" 
                                type="object" class="btn-primary" 
                                invisible="state != 'draft'"/>
                        <button name="action_submit_review" string="Submit for Review" 
                                type="object" class="btn-primary" 
                                invisible="state != 'in_progress'"/>
                        <button name="action_approve" string="Approve" 
                                type="object" class="btn-success" 
                                invisible="state != 'review'"/>
                        <button name="action_reset_draft" string="Reset to Draft" 
                                type="object" 
                                invisible="state == 'draft'"/>
                        <button name="action_accept_planning" string="Accept Engagement" type="object" class="btn-secondary" invisible="acceptance_state == 'accepted'"/>
                        <button name="action_trigger_independence_escalation" string="Escalate Independence" type="object" class="btn-secondary" invisible="independence_questionnaire_result != 'review'"/>
                        <button name="action_mark_ready_for_fieldwork" string="Mark Fieldwork Ready" type="object" class="btn-success" invisible="state not in ['approved','review']"/>
                        <button name="action_export_planning_memorandum" string="Planning Memorandum" type="object" class="btn-outline-primary"/>
                        <button name="action_export_secp_package" string="SECP Export" type="object" class="btn-outline-primary"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,in_progress,review,approved,fieldwork,finalisation"/>
                        <field name="acceptance_state" widget="statusbar" statusbar_visible="draft,precheck,awaiting_clearance,accepted,rejected"/>
                    </header>
                    <sheet>
                        <field name="independence_questionnaire_result" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                        
                        <!-- Smart Buttons -->
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_materiality" icon="fa-balance-scale">
                                <field string="Materiality" name="materiality_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_risks" icon="fa-exclamation-triangle">
                                <field string="Risks" name="risk_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_significant_risks" icon="fa-warning">
                                <field string="Significant" name="significant_risk_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_pbc" icon="fa-files-o">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Information Requests</span>
                                    <span class="o_stat_value">
                                        <field name="pbc_received_count" nolabel="1"/> / <field name="pbc_count" nolabel="1"/>
                                    </span>
                                </div>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_milestones" icon="fa-calendar-check-o">
                                <field string="Milestones" name="milestone_count" widget="statinfo"/>
                            </button>
                        </div>
                        
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="audit_id" options="{'no_create': True}"/>
                                <field name="client_id"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="manager_id"/>
                                <field name="active" invisible="1"/>
                                <field name="risk_count" invisible="1"/>
                                <field name="significant_risk_count" invisible="1"/>
                                <field name="pbc_count" invisible="1"/>
                                <field name="pbc_received_count" invisible="1"/>
                                <field name="milestone_count" invisible="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page name="client_info" string="Client Information">
                                <group>
                                    <group string="Industry &amp; Business">
                                        <field name="industry_sector_id" options="{'no_create': True}"/>
                                        <field name="business_nature" placeholder="Describe the nature of client's business..."/>
                                    </group>
                                    <group string="Key Personnel">
                                        <field name="key_personnel" placeholder="List key client personnel and their roles..."/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Regulatory Profile">
                                        <field name="client_year_end"/>
                                        <field name="client_regulator" placeholder="e.g., SECP, SBP, tax authority"/>
                                        <field name="client_listing_exchange" placeholder="If listed, note the exchange"/>
                                    </group>
                                    <group string="Ownership &amp; Governance">
                                        <field name="client_ownership_structure" placeholder="Summarize shareholders / parent entities..."/>
                                        <field name="client_governance_notes" placeholder="Describe governance bodies / committees..."/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Strategic Context">
                                        <field name="client_objectives_strategies" placeholder="Document stated objectives and strategies (ISA 315)..."/>
                                        <field name="client_measurement_basis" placeholder="Key KPIs / measurement bases used by management..."/>
                                    </group>
                                    <group string="Systems &amp; Compliance">
                                        <field name="client_it_environment" placeholder="List key IT systems supporting financial reporting..."/>
                                        <field name="client_compliance_matters" placeholder="Significant compliance / regulatory issues to note..."/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Engagement Details Tab -->
                            <page name="engagement" string="Engagement Details">
                                <group>
                                    <group string="Engagement Information">
                                        <field name="engagement_type"/>
                                        <field name="reporting_framework"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    <group string="Timeline">
                                        <field name="planning_start_date"/>
                                        <field name="planning_end_date"/>
                                        <field name="fieldwork_start_date"/>
                                        <field name="fieldwork_end_date"/>
                                        <field name="estimated_hours"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="audit_scope" placeholder="Define the scope and objectives of the audit..."/>
                                </group>
                            </page>
                            
                            <!-- Risk Assessment Tab -->
                            <page name="risk" string="Risk Assessment">
                                <group>
                                    <group string="Risk Levels">
                                        <field name="inherent_risk"/>
                                        <field name="control_risk"/>
                                        <field name="detection_risk"/>
                                    </group>
                                    <group string="Risk Analysis">
                                        <field name="key_risk_areas" placeholder="Identify key risk areas..."/>
                                        <field name="fraud_risk_assessment" placeholder="Document fraud risk assessment..."/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Risks Tab -->
                            <page name="risks" string="Risks">
                                <field name="risk_ids">
                                    <tree decoration-danger="significant == True">
                                        <field name="name"/>
                                        <field name="risk_type"/>
                                        <field name="assertion"/>
                                        <field name="account_area"/>
                                        <field name="likelihood"/>
                                        <field name="impact"/>
                                        <field name="risk_score"/>
                                        <field name="significant"/>
                                        <field name="response"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <!-- Checklist Tab -->
                            <page name="checklist_items" string="Checklist">
                                <group>
                                    <group>
                                        <field name="checklist_total"/>
                                        <field name="checklist_done"/>
                                        <field name="progress" widget="percentpie"/>
                                    </group>
                                </group>
                                <field name="checklist_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="section"/>
                                        <field name="description"/>
                                        <field name="isa_ref"/>
                                        <field name="owner_id"/>
                                        <field name="done"/>
                                        <field name="completion_date"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <!-- Information Requisition Tab -->
                            <page name="pbc_list" string="Information Requisitions">
                                <field name="pbc_ids">
                                    <tree decoration-success="received == True" decoration-danger="due_date and due_date &lt; context_today().strftime('%Y-%m-%d') and not received">
                                        <field name="name"/>
                                        <field name="category"/>
                                        <field name="client_contact"/>
                                        <field name="due_date"/>
                                        <field name="received"/>
                                        <field name="received_date"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <!-- Timeline Tab -->
                            <page name="timeline" string="Timeline">
                                <field name="milestone_ids">
                                    <tree decoration-success="completed == True">
                                        <field name="name"/>
                                        <field name="category"/>
                                        <field name="date"/>
                                        <field name="owner_id"/>
                                        <field name="completed"/>
                                        <field name="completion_date"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <!-- Team Tab -->
                            <page name="team" string="Team">
                                <group>
                                    <group>
                                        <field name="partner_id"/>
                                        <field name="manager_id"/>
                                    </group>
                                </group>
                                <group string="Engagement Team">
                                    <field name="team_ids" widget="many2many_tags_avatar" nolabel="1"/>
                                </group>
                            </page>
                            
                            <!-- Materiality Tab -->
                            <page name="materiality" string="Materiality">
                                <group>
                                    <group string="Materiality Calculations">
                                        <field name="materiality_basis"/>
                                        <field name="materiality_amount" widget="monetary"/>
                                        <field name="performance_materiality" widget="monetary"/>
                                        <field name="trivial_misstatement" widget="monetary"/>
                                    </group>
                                    <group string="ISA 320 Requirements">
                                        <field name="overall_strategy" placeholder="Document overall audit strategy (ISA 300)..."/>
                                        <field name="scope" placeholder="Define audit scope and components..."/>
                                        <field name="materiality_notes" placeholder="Document materiality rationale and judgments..."/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Additional Considerations">
                                        <field name="use_of_experts"/>
                                        <field name="rely_on_internal_audit"/>
                                    </group>
                                    <group string="Approach">
                                        <field name="audit_approach"/>
                                        <field name="significant_components" placeholder="Document significant components and areas..."/>
                                    </group>
                                </group>
                                <group string="Materiality Worksheets">
                                    <field name="materiality_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="benchmark_type"/>
                                            <field name="benchmark_amount"/>
                                            <field name="applied_percent"/>
                                            <field name="materiality_amount"/>
                                            <field name="performance_materiality_amount"/>
                                            <field name="status"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            
                            <!-- Ethics & Compliance Tab -->
                            <page name="ethics" string="Ethics &amp; Compliance">
                                <group>
                                    <group string="ISA 210: Engagement Letter">
                                        <field name="engagement_letter_obtained"/>
                                        <field name="engagement_letter_date"/>
                                    </group>
                                    <group string="IESBA Code: Independence">
                                        <field name="independence_confirmed"/>
                                        <field name="independence_date"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="ISA 220: Quality Control">
                                        <field name="ethical_requirements_met"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Documents &amp; Notes Tab -->
                            <page name="documents" string="Documents &amp; Notes">
                                <group>
                                    <field name="planning_notes" placeholder="Enter planning notes and observations..."/>
                                </group>
                                <group string="Planning Documents">
                                    <field name="planning_attachments" widget="many2many_binary" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Planning Phase Search View -->
        <record id="view_planning_phase_search" model="ir.ui.view">
            <field name="name">qaco.planning.phase.search</field>
            <field name="model">qaco.planning.phase</field>
            <field name="arch" type="xml">
                <search string="Planning Phase">
                    <field name="audit_id"/>
                    <field name="client_id"/>
                    <field name="industry_sector_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Under Review" name="review" domain="[('state', '=', 'review')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Audit" name="group_audit" context="{'group_by': 'audit_id'}"/>
                        <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                        <filter string="Sector" name="group_sector" context="{'group_by': 'industry_sector_id'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ========================================= -->
        <!-- Planning Risk Views -->
        <!-- ========================================= -->
        
        <record id="view_planning_risk_tree" model="ir.ui.view">
            <field name="name">qaco.planning.risk.tree</field>
            <field name="model">qaco.planning.risk</field>
            <field name="arch" type="xml">
                <tree string="Risks" decoration-danger="significant == True">
                    <field name="name"/>
                    <field name="risk_type"/>
                    <field name="assertion"/>
                    <field name="account_area"/>
                    <field name="likelihood"/>
                    <field name="impact"/>
                    <field name="risk_score"/>
                    <field name="significant"/>
                    <field name="response"/>
                </tree>
            </field>
        </record>

        <record id="view_planning_risk_form" model="ir.ui.view">
            <field name="name">qaco.planning.risk.form</field>
            <field name="model">qaco.planning.risk</field>
            <field name="arch" type="xml">
                <form string="Risk">
                    <sheet>
                        <group>
                            <group>
                                <field name="planning_id"/>
                                <field name="name"/>
                                <field name="risk_type"/>
                                <field name="assertion"/>
                                <field name="account_area"/>
                            </group>
                            <group>
                                <field name="likelihood"/>
                                <field name="impact"/>
                                <field name="risk_score"/>
                                <field name="significant"/>
                                <field name="isa_ref"/>
                            </group>
                        </group>
                        <group>
                            <field name="response"/>
                            <field name="response_detail" placeholder="Describe planned audit response in detail..."/>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================= -->
        <!-- Planning Checklist Views -->
        <!-- ========================================= -->
        
        <record id="view_planning_checklist_tree" model="ir.ui.view">
            <field name="name">qaco.planning.checklist.tree</field>
            <field name="model">qaco.planning.checklist</field>
            <field name="arch" type="xml">
                <tree string="Checklist" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="section"/>
                    <field name="description"/>
                    <field name="isa_ref"/>
                    <field name="owner_id"/>
                    <field name="done"/>
                    <field name="completion_date"/>
                </tree>
            </field>
        </record>

        <record id="view_planning_checklist_form" model="ir.ui.view">
            <field name="name">qaco.planning.checklist.form</field>
            <field name="model">qaco.planning.checklist</field>
            <field name="arch" type="xml">
                <form string="Checklist Item">
                    <sheet>
                        <group>
                            <group>
                                <field name="planning_id"/>
                                <field name="section"/>
                                <field name="description"/>
                                <field name="isa_ref"/>
                            </group>
                            <group>
                                <field name="owner_id"/>
                                <field name="done"/>
                                <field name="completion_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================= -->
        <!-- Information Requisition Views -->
        <!-- ========================================= -->
        
        <record id="view_planning_pbc_tree" model="ir.ui.view">
            <field name="name">qaco.planning.pbc.tree</field>
            <field name="model">qaco.planning.pbc</field>
            <field name="arch" type="xml">
                <tree string="Information Requisitions" decoration-success="received == True" decoration-danger="due_date and due_date &lt; context_today().strftime('%Y-%m-%d') and not received">
                    <field name="sequence_ref"/>
                    <field name="information_heading"/>
                    <field name="name"/>
                    <field name="category"/>
                    <field name="priority"/>
                    <field name="responsible_role"/>
                    <field name="client_contact_id"/>
                    <field name="expected_format"/>
                    <field name="format_detail"/>
                    <field name="delivery_status"/>
                    <field name="requested_date"/>
                    <field name="due_date"/>
                    <field name="applicable"/>
                    <field name="received"/>
                    <field name="received_date"/>
                </tree>
            </field>
        </record>

        <!-- Materiality Views -->
        <record id="view_planning_materiality_tree" model="ir.ui.view">
            <field name="name">qaco.planning.materiality.tree</field>
            <field name="model">qaco.materiality</field>
            <field name="arch" type="xml">
                <tree string="Materiality Worksheets">
                    <field name="name"/>
                    <field name="planning_id"/>
                    <field name="benchmark_type"/>
                    <field name="benchmark_amount"/>
                    <field name="applied_percent"/>
                    <field name="materiality_amount"/>
                    <field name="performance_percent"/>
                    <field name="performance_materiality_amount"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="view_planning_materiality_form" model="ir.ui.view">
            <field name="name">qaco.planning.materiality.form</field>
            <field name="model">qaco.materiality</field>
            <field name="arch" type="xml">
                <form string="Materiality Worksheet">
                    <header>
                        <button name="button_apply_defaults" string="Apply Defaults" type="object" modifiers="{'invisible': [('status', 'in', ['approved','archived'])]}"/>
                        <button name="button_approve" string="Approve" type="object" class="btn-primary" modifiers="{'invisible': [('status', '!=', 'draft')]}"/>
                        <button name="button_supersede" string="Supersede" type="object" modifiers="{'invisible': [('status', '!=', 'approved')]}"/>
                        <button name="button_reset_to_draft" string="Reset to Draft" type="object" modifiers="{'invisible': [('status', '!=', 'superseded')]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,approved,superseded,archived"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="planning_id"/>
                                <field name="audit_id"/>
                                <field name="name"/>
                                <field name="date_prepared"/>
                                <field name="prepared_by"/>
                                <field name="reviewed_by"/>
                            </group>
                            <group>
                                <field name="benchmark_type"/>
                                <field name="benchmark_amount"/>
                                <field name="base_source_type"/>
                                <field name="base_source_reference"/>
                                <field name="applied_percent"/>
                                <field name="rounding"/>
                            </group>
                        </group>
                        <group>
                            <group string="Materiality">
                                <field name="materiality_amount"/>
                                <field name="performance_percent"/>
                                <field name="performance_materiality_amount"/>
                                <field name="trivial_percent"/>
                                <field name="trivial_amount"/>
                            </group>
                            <group string="Sensitivity">
                                <field name="sensitivity_low_percent"/>
                                <field name="sensitivity_low_amount"/>
                                <field name="sensitivity_high_percent"/>
                                <field name="sensitivity_high_amount"/>
                            </group>
                        </group>
                        <group>
                            <field name="rationale" placeholder="Explain rationale..."/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_planning_materiality_search" model="ir.ui.view">
            <field name="name">qaco.planning.materiality.search</field>
            <field name="model">qaco.materiality</field>
            <field name="arch" type="xml">
                <search string="Materiality">
                    <field name="name"/>
                    <field name="planning_id"/>
                    <field name="audit_id"/>
                    <filter string="Approved" name="approved" domain="[('status', '=', 'approved')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Planning" name="group_planning" context="{'group_by': 'planning_id'}"/>
                        <filter string="Benchmark" name="group_basis" context="{'group_by': 'benchmark_type'}"/>
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Information Requisition Template Views -->
        <record id="view_planning_pbc_template_tree" model="ir.ui.view">
            <field name="name">qaco.planning.pbc.template.tree</field>
            <field name="model">qaco.planning.pbc.template</field>
            <field name="arch" type="xml">
                <tree string="Information Requisition Templates">
                    <field name="sequence_ref"/>
                    <field name="name"/>
                    <field name="information_heading"/>
                    <field name="entity_classification"/>
                    <field name="category"/>
                    <field name="priority"/>
                    <field name="format_expected"/>
                </tree>
            </field>
        </record>

        <record id="view_planning_pbc_template_form" model="ir.ui.view">
            <field name="name">qaco.planning.pbc.template.form</field>
            <field name="model">qaco.planning.pbc.template</field>
            <field name="arch" type="xml">
                <form string="Information Requisition Template">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="information_heading"/>
                                <field name="sequence_ref"/>
                                <field name="entity_classification"/>
                            </group>
                            <group>
                                <field name="category"/>
                                <field name="priority"/>
                                <field name="format_expected"/>
                                <field name="format_detail"/>
                                <field name="responsible_role"/>
                            </group>
                        </group>
                        <field name="description" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_planning_pbc_form" model="ir.ui.view">
            <field name="name">qaco.planning.pbc.form</field>
            <field name="model">qaco.planning.pbc</field>
            <field name="arch" type="xml">
                <form string="Information Requisition">
                    <header>
                        <button name="action_request" string="Send Request" type="object" class="btn-primary" invisible="delivery_status in ['requested','received']"/>
                        <button name="action_mark_received" string="Mark Received" type="object" class="btn-success" invisible="delivery_status == 'received'"/>
                        <button name="action_send_reminder" string="Send Reminder" type="object" class="btn-secondary"/>
                        <field name="delivery_status" widget="statusbar" statusbar_visible="not_requested,requested,incomplete,received"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="planning_id"/>
                                <field name="information_heading"/>
                                <field name="sequence_ref"/>
                                <field name="name"/>
                                <field name="category"/>
                                <field name="priority"/>
                                <field name="applicable"/>
                            </group>
                            <group>
                                <field name="responsible_role"/>
                                <field name="client_contact_id"/>
                                <field name="client_contact"/>
                                <field name="expected_format"/>
                                <field name="format_detail"/>
                                <field name="shared_with_portal"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="delivery_status"/>
                                <field name="requested_date"/>
                                <field name="due_date"/>
                            </group>
                            <group>
                                <field name="received"/>
                                <field name="received_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Describe the required document or information..."/>
                            <field name="sample_items" placeholder="List sample items if partial sampling is required"/>
                        </group>
                        <group string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                        </group>
                        <group>
                            <field name="follow_up_log" widget="html"/>
                        </group>
                        <group>
                            <field name="reminder_count" readonly="1"/>
                            <field name="escalation_level" readonly="1"/>
                            <field name="auto_reminder_config"/>
                            <field name="reminder_days"/>
                        </group>
                        <group string="Reminder History">
                            <field name="reminder_log_ids">
                                <tree editable="bottom">
                                    <field name="reminder_type"/>
                                    <field name="reminder_date"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================= -->
        <!-- Planning Milestone Views -->
        <!-- ========================================= -->
        
        <record id="view_planning_milestone_tree" model="ir.ui.view">
            <field name="name">qaco.planning.milestone.tree</field>
            <field name="model">qaco.planning.milestone</field>
            <field name="arch" type="xml">
                <tree string="Milestones" decoration-success="completed == True">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="date"/>
                    <field name="owner_id"/>
                    <field name="completed"/>
                    <field name="completion_date"/>
                </tree>
            </field>
        </record>

        <record id="view_planning_milestone_form" model="ir.ui.view">
            <field name="name">qaco.planning.milestone.form</field>
            <field name="model">qaco.planning.milestone</field>
            <field name="arch" type="xml">
                <form string="Milestone">
                    <sheet>
                        <group>
                            <group>
                                <field name="planning_id"/>
                                <field name="name"/>
                                <field name="category"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="owner_id"/>
                                <field name="completed"/>
                                <field name="completion_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
