<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_qaco_planning_phase_form" model="ir.ui.view">
		<field name="name">qaco.planning.phase.form</field>
		<field name="model">qaco.planning.phase</field>
		<field name="arch" type="xml">
			<form string="Planning Phase - Statutory Audit Pakistan" class="o_planning_form">
				<!-- Hidden fields for modifiers -->
				<field name="can_finalize_planning" invisible="1"/>
				<header>
					<button name="action_manager_sign" type="object" string="Manager Sign-off"
							class="btn-primary oe_highlight"
							invisible="manager_signed_user_id or planning_complete"/>
					<button name="action_partner_sign" type="object" string="Partner Sign-off"
							class="btn-secondary"
							invisible="partner_signed_user_id or planning_complete"/>
					<button name="action_mark_planning_complete" type="object" string="Complete Planning Phase"
							class="btn-success"
							invisible="planning_complete"
							readonly="not can_finalize_planning"/>
					<button name="action_quality_review" type="object" string="Quality Review"
							class="btn-warning"
							invisible="quality_reviewer_id"/>
					<button name="action_generate_planning_memo" type="object" string="Generate Planning Memo"
							class="btn-link"/>
					<field name="planning_complete" widget="boolean_button" options='{"terminology": "close"}' class="oe_right"/>
				</header>
				<sheet class="o_planning_sheet">
					<div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" type="object" name="action_view_audit" icon="fa-file-text-o">
							<div class="o_stat_info">
								<span class="o_stat_text">Audit</span>
							</div>
						</button>
					</div>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1"/>
						</h1>
					</div>
					
					<notebook class="o_planning_tabs">
						<!-- P-1: Engagement Overview & Planning Control -->
						<page name="section_p1" string="P-1: Engagement Overview" class="o_planning_tab_page">
							<div id="section-p-1" class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-1</span>
									<span class="o_planning_card_title">Engagement Overview &amp; Planning Control</span>
									<span class="o_planning_card_ref">ISA 210/220/ISQM-1</span>
								</div>
								<group class="o_planning_grid">
									<group string="Engagement Details">
										<field name="audit_id" required="1"/>
										<field name="client_id" readonly="1"/>
									</group>
									<group string="Audit Period">
										<field name="audit_type" required="1"/>
										<field name="audit_period_from"/>
										<field name="audit_period_to"/>
										<field name="financial_year_end"/>
									</group>
									<group string="Previous Auditor">
										<field name="previous_auditor"/>
										<field name="audit_tenure_years" readonly="1"/>
									</group>
								</group>
							</div>
							
							<!-- P-1.1 Planning Phase Status Dashboard -->
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-1.1</span>
									<span class="o_planning_card_title">Planning Phase Status Dashboard</span>
									<span class="o_planning_card_ref">ISA 300 / ISQM-1</span>
								</div>
								<group class="o_planning_grid">
									<field name="understanding_status" widget="progressbar" options='{"editable": true}'/>
									<field name="analytics_status" widget="progressbar" options='{"editable": true}'/>
									<field name="materiality_status" widget="progressbar" options='{"editable": true}'/>
									<field name="control_status" widget="progressbar" options='{"editable": true}'/>
									<field name="risk_status" widget="progressbar" options='{"editable": true}'/>
									<field name="completion_status" widget="progressbar" options='{"editable": true}'/>
								</group>
								<div invisible="can_finalize_planning">
									<div class="alert alert-warning mt-3 mx-3 mb-3">
										<i class="fa fa-exclamation-triangle me-2"/>
										<strong>Planning Requirements:</strong>
										<field name="missing_requirements_note" nolabel="1" readonly="1"/>
									</div>
								</div>
							</div>
						</page>
						
						<!-- P-2: Understanding the Entity & Its Environment -->
						<page name="section_p2" string="P-2: Entity &amp; Environment" class="o_planning_tab_page">
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-2</span>
									<span class="o_planning_card_title">Understanding the Entity &amp; Its Environment</span>
									<span class="o_planning_card_ref">ISA 315</span>
								</div>
								<group class="o_planning_grid">
									<group string="Industry &amp; Business Overview">
										<field name="industry_type"/>
										<field name="industry_id"/>
									</group>
									<field name="business_model" nolabel="1" placeholder="Describe the business model, revenue sources, key products/services, major customers and suppliers..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">2.1</span>
									<span class="o_planning_card_title">Organizational Structure</span>
									<span class="o_planning_card_ref">ISA 315</span>
								</div>
								<group class="o_planning_grid">
									<field name="organizational_structure" nolabel="1" placeholder="Describe organizational structure, key personnel, reporting lines, governance framework..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">2.2</span>
									<span class="o_planning_card_title">Operational Footprint</span>
									<span class="o_planning_card_ref">ISA 315</span>
								</div>
								<group class="o_planning_grid">
									<field name="operational_locations" nolabel="1" placeholder="List all operational locations, branches, warehouses, and their significance..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">2.3</span>
									<span class="o_planning_card_title">Key Contracts &amp; Arrangements</span>
									<span class="o_planning_card_ref">ISA 315</span>
								</div>
								<group class="o_planning_grid">
									<field name="key_contracts" nolabel="1" placeholder="Document key contractual arrangements: long-term supply contracts, franchises, leases, joint ventures..."/>
								</group>
							</div>
						</page>
						
						<!-- P-2.4 - Regulatory & Compliance -->
						<page name="section_p2_4" string="P-2.4 - Regulatory" class="o_planning_tab_page">
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-2.4</span>
									<span class="o_planning_card_title">Regulatory Framework - Pakistan</span>
									<span class="o_planning_card_ref">ISA 315 / Pakistan Laws</span>
								</div>
								<group class="o_planning_grid">
									<field name="applicable_regulators" widget="many2many_tags" placeholder="Select applicable regulators..."/>
									<field name="regulatory_filings_status"/>
									<field name="regulatory_penalties" nolabel="1" placeholder="Document any regulatory penalties, litigations, or compliance issues..."/>
									<field name="compliance_certificates" nolabel="1" placeholder="Status of compliance certificates, licenses, registrations..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">2.5</span>
									<span class="o_planning_card_title">Related Parties &amp; Group Structure</span>
									<span class="o_planning_card_ref">ISA 550</span>
								</div>
								<group class="o_planning_grid">
									<field name="related_parties_summary" nolabel="1" placeholder="Identify all related parties, nature of relationships, and control relationships..."/>
									<field name="group_structure" nolabel="1" placeholder="Describe group structure, ownership, and organizational hierarchy..."/>
									<field name="intra_group_transactions" nolabel="1" placeholder="Document intra-group transactions, pricing policies, and significant arrangements..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">2.6</span>
									<span class="o_planning_card_title">Fraud Risk Assessment</span>
									<span class="o_planning_card_ref">ISA 240</span>
								</div>
								<group class="o_planning_grid">
									<field name="fraud_incentives" nolabel="1" placeholder="Identify incentives/pressures that might predispose management/employees to commit fraud..."/>
									<field name="fraud_opportunities" nolabel="1" placeholder="Identify opportunities for fraud due to control weaknesses or complex transactions..."/>
									<field name="fraud_attitudes" nolabel="1" placeholder="Assess attitudes/rationalizations that might justify fraudulent financial reporting..."/>
									<field name="fraud_risk_assessment" nolabel="1" placeholder="Overall fraud risk assessment and conclusions..."/>
								</group>
							</div>
						</page>
						
						<!-- P-8: Preliminary Analytical Procedures -->
						<page name="section_p8" string="P-8: Analytics" class="o_planning_tab_page">
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-8</span>
									<span class="o_planning_card_title">Preliminary Analytical Procedures</span>
									<span class="o_planning_card_ref">ISA 520</span>
								</div>
								<group class="o_planning_grid">
									<group string="Financial Data for Analysis">
										<field name="prior_year_fs_attachment_ids" widget="many2many_binary" string="Prior Year Financial Statements (Last 3 Years)"/>
										<field name="current_year_tb_attachment_ids" widget="many2many_binary" string="Current Year Trial Balance &amp; Draft FS"/>
									</group>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">3.1</span>
									<span class="o_planning_card_title">Industry Benchmarks &amp; Comparisons</span>
									<span class="o_planning_card_ref">ISA 520</span>
								</div>
								<group class="o_planning_grid">
									<field name="industry_benchmarks" nolabel="1" placeholder="Industry benchmarks, competitor analysis, economic indicators relevant to the entity..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">3.2</span>
									<span class="o_planning_card_title">Trend &amp; Ratio Analysis</span>
									<span class="o_planning_card_ref">ISA 520</span>
								</div>
								<group class="o_planning_grid">
									<field name="trend_analysis" nolabel="1" placeholder="3-5 year trend analysis of key financial statement line items..."/>
									<field name="ratio_analysis_summary" nolabel="1" placeholder="Profitability, liquidity, solvency, and efficiency ratio analysis..."/>
									<field name="analytical_expectations" nolabel="1" placeholder="Analytical expectations vs actual results with explanations for variances..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">3.3</span>
									<span class="o_planning_card_title">Significant Fluctuations Analysis</span>
									<span class="o_planning_card_ref">ISA 520</span>
								</div>
								<group class="o_planning_grid">
									<field name="significant_fluctuations" nolabel="1" placeholder="Analysis of significant fluctuations (&gt;10% or materiality) with management inquiries..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">3.4</span>
									<span class="o_planning_card_title">Going Concern Assessment</span>
									<span class="o_planning_card_ref">ISA 570</span>
								</div>
								<group class="o_planning_grid">
									<field name="going_concern_assessment" nolabel="1" placeholder="Assessment of going concern assumption, indicators of going concern issues..."/>
								</group>
							</div>
						</page>
						
						<!-- P-6: Materiality & Performance Materiality -->
						<page name="section_p6" string="P-6: Materiality" class="o_planning_tab_page">
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-6</span>
									<span class="o_planning_card_title">Materiality &amp; Performance Materiality</span>
									<span class="o_planning_card_ref">ISA 320</span>
								</div>
								<group class="o_planning_grid">
									<group string="Materiality Benchmark Selection">
										<field name="materiality_benchmark"/>
										<field name="materiality_percentage"/>
										<field name="custom_benchmark_value" required="materiality_benchmark == 'custom'" invisible="materiality_benchmark != 'custom'"/>
									</group>
									<field name="materiality_justification" nolabel="1" placeholder="Justify benchmark selection considering entity circumstances, industry practices, and ISA 320 guidance..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">4.1</span>
									<span class="o_planning_card_title">Calculated Materiality Amounts</span>
									<span class="o_planning_card_ref">ISA 320</span>
								</div>
								<group class="o_planning_grid">
									<field name="overall_materiality" readonly="1"/>
									<field name="performance_materiality" readonly="1"/>
									<field name="clearly_trivial_threshold" readonly="1"/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">4.2</span>
									<span class="o_planning_card_title">Materiality Documentation</span>
									<span class="o_planning_card_ref">ISA 320</span>
								</div>
								<group class="o_planning_grid">
									<field name="materiality_worksheet_attachment_ids" widget="many2many_binary" string="Materiality Calculation Worksheets &amp; Documentation"/>
								</group>
							</div>
						</page>
						
						<!-- P-3: Understanding Internal Control & IT Environment -->
						<page name="section_p3" string="P-3: Internal Controls" class="o_planning_tab_page">
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-3</span>
									<span class="o_planning_card_title">Understanding Internal Control &amp; IT Environment</span>
									<span class="o_planning_card_ref">ISA 315</span>
								</div>
								<group class="o_planning_grid">
									<group string="Control Environment Assessment">
										<field name="control_environment_rating" widget="radio"/>
										<field name="entity_level_controls_rating" widget="radio"/>
										<field name="risk_assessment_rating" widget="radio"/>
									</group>
									<group string="Control Activities &amp; Monitoring">
										<field name="control_activities_rating" widget="radio"/>
										<field name="monitoring_controls_rating" widget="radio"/>
										<field name="itgc_rating" widget="radio"/>
										<field name="internal_audit_function" widget="radio"/>
									</group>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">5.1</span>
									<span class="o_planning_card_title">Control Reliance Strategy</span>
									<span class="o_planning_card_ref">ISA 315</span>
								</div>
								<group class="o_planning_grid">
									<field name="reliance_on_controls" readonly="1"/>
									<field name="control_assessment_summary" nolabel="1" placeholder="Overall control assessment summary and conclusions regarding reliance strategy..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">5.2</span>
									<span class="o_planning_card_title">Internal Control Documentation</span>
									<span class="o_planning_card_ref">ISA 315</span>
								</div>
								<group class="o_planning_grid">
									<field name="internal_control_attachment_ids" widget="many2many_binary" string="Control Questionnaires, Walkthrough Documentation, and Assessment Sheets"/>
									<field name="process_flow_attachment_ids" widget="many2many_binary" string="Process Flowcharts for Significant Cycles"/>
								</group>
							</div>
						</page>
						
						<!-- P-4/P-5 - Risk Assessment & Response -->
						<page name="section_p4_p5" string="P-4/P-5 - Risk Assessment" class="o_planning_tab_page">
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-4</span>
									<span class="o_planning_card_title">Risk Register</span>
									<span class="o_planning_card_ref">ISA 315 / ISA 330</span>
								</div>
								<group class="o_planning_grid">
									<field name="risk_register_line_ids" nolabel="1" context="{'default_planning_phase_id': active_id}">
										<tree editable="bottom" default_order="sequence">
											<field name="sequence" widget="handle"/>
											<field name="account_cycle"/>
											<field name="risk_description"/>
											<field name="risk_rating" widget="selection_badge"/>
											<field name="is_significant_risk"/>
											<field name="fs_level_risk"/>
											<field name="assertion_type"/>
										</tree>
										<form>
											<group>
												<group string="Risk Identification">
													<field name="account_cycle"/>
													<field name="risk_description"/>
													<field name="fs_level_risk"/>
													<field name="assertion_type"/>
												</group>
												<group string="Risk Assessment">
													<field name="risk_rating"/>
													<field name="is_significant_risk"/>
													<field name="likelihood"/>
													<field name="magnitude"/>
												</group>
											</group>
											<group string="ISA Risk Classification">
												<field name="isa_240_risk"/>
												<field name="isa_540_risk"/>
												<field name="isa_550_risk"/>
												<field name="isa_570_risk"/>
											</group>
											<group string="Root Cause &amp; Impact">
												<field name="root_cause"/>
												<field name="impact_on_fs"/>
											</group>
											<group string="Audit Response">
												<field name="planned_procedures"/>
												<field name="nature_of_procedures"/>
												<field name="timing_of_procedures"/>
												<field name="extent_of_procedures"/>
												<field name="link_to_audit_program"/>
											</group>
										</form>
									</field>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-5.1</span>
									<span class="o_planning_card_title">Overall Audit Strategy</span>
									<span class="o_planning_card_ref">ISA 300 / ISA 330</span>
								</div>
								<group class="o_planning_grid">
									<field name="audit_approach" nolabel="1" placeholder="Describe overall audit approach, nature/timing/extent of procedures, reliance strategy..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-5.2</span>
									<span class="o_planning_card_title">Specialized Resources</span>
									<span class="o_planning_card_ref">ISA 620 / ISA 600</span>
								</div>
								<group class="o_planning_grid">
									<field name="use_of_experts"/>
									<field name="experts_details" nolabel="1" invisible="not use_of_experts" placeholder="Scope of expert work, qualifications, coordination procedures..."/>
									<field name="use_of_caats"/>
									<field name="caats_details" nolabel="1" invisible="not use_of_caats" placeholder="CAATs tools, data analytics approach, specific procedures..."/>
									<field name="component_auditors_involved"/>
									<field name="component_auditors_details" nolabel="1" invisible="not component_auditors_involved" placeholder="Component auditor coordination, instructions, review procedures..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-5.3</span>
									<span class="o_planning_card_title">Staffing &amp; Timeline</span>
									<span class="o_planning_card_ref">ISA 300</span>
								</div>
								<group class="o_planning_grid">
									<field name="staffing_plan" nolabel="1" placeholder="Staffing plan, team composition, experience levels, supervision arrangements..."/>
									<field name="audit_timeline" nolabel="1" placeholder="Detailed audit timeline, key milestones, interim and final procedures..."/>
									<field name="budget_hours" string="Planned Budget (Hours)"/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-5.4</span>
									<span class="o_planning_card_title">Risk &amp; Strategy Documentation</span>
									<span class="o_planning_card_ref">ISA 300</span>
								</div>
								<group class="o_planning_grid">
									<field name="risk_register_attachment_ids" widget="many2many_binary" string="Risk Register Files"/>
									<field name="audit_strategy_attachment_ids" widget="many2many_binary" string="Audit Strategy Documentation"/>
								</group>
							</div>
						</page>
						
						<!-- P-13 - APM & Approval -->
						<page name="section_p13" string="P-13 - APM &amp; Approval" class="o_planning_tab_page">
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-13.0</span>
									<span class="o_planning_card_title">Planning Memorandum</span>
									<span class="o_planning_card_ref">ISA 300</span>
								</div>
								<group class="o_planning_grid">
									<field name="planning_memo_summary" nolabel="1" placeholder="Executive summary of planning memorandum for partner review..."/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-13.1</span>
									<span class="o_planning_card_title">Regulatory Compliance - Pakistan</span>
									<span class="o_planning_card_ref">ICAP / SECP / AOB</span>
								</div>
								<group class="o_planning_grid">
									<field name="icap_compliance_check" string="ICAP Standards Compliance Verified"/>
									<field name="secp_requirements_met" string="SECP Requirements Addressed"/>
									<field name="aob_guidelines_considered" string="AOB Guidelines Considered"/>
								</group>
							</div>
							
							<div class="o_planning_card">
								<div class="o_planning_card_header">
									<span class="o_planning_card_number">P-13.2</span>
									<span class="o_planning_card_title">Mandatory Attachments - Zero Deficiency</span>
									<span class="o_planning_card_ref">ISA 230 / Pakistan Laws</span>
								</div>
