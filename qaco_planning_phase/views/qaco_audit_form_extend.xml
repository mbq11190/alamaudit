<odoo>
    <data>
        <!-- Add Planning Phase Smart Button -->
        <record id="view_qaco_audit_form_planning_button" model="ir.ui.view">
            <field name="name">qaco.audit.form.planning.button</field>
            <field name="model">qaco.audit</field>
            <field name="inherit_id" ref="qaco_audit.qaco_audit_form"/>
            <field name="arch" type="xml">
                <!-- Add Planning Phase Smart Button -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <field name="planning_phase_id" invisible="1"/>
                    <field name="planning_state" invisible="1"/>
                    <button class="oe_stat_button" type="object" 
                            name="action_open_planning_phase"
                            icon="fa-clipboard">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Planning Phase</span>
                            <span class="o_stat_value">
                                <field name="planning_state" readonly="1"/>
                            </span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
