<odoo>
    <data>
        <!-- Extend qaco_audit form view to add Planning Phase notebook -->
        <record id="view_qaco_audit_form_planning_phase" model="ir.ui.view">
            <field name="name">qaco.audit.form.planning.phase</field>
            <field name="model">qaco.audit</field>
            <field name="inherit_id" ref="qaco_audit.qaco_audit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='description_page']" position="after">
                    <page name="planning_phase" string="Planning Phase">
                        <group>
                            <button name="action_create_planning_phase" 
                                    string="Initialize Planning Phase" 
                                    type="object" 
                                    class="btn-primary"
                                    invisible="planning_phase_id"/>
                        </group>
                        
                        <group invisible="not planning_phase_id">
                            <!-- Client & Industry Information -->
                            <group string="Client &amp; Industry Information" col="2">
                                <field name="planning_phase_id" invisible="1"/>
                                <field name="planning_phase_id" widget="many2one" 
                                       context="{'form_view_ref': 'qaco_planning_phase.view_planning_phase_form_embedded'}"
                                       options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                        
                        <!-- Embedded Planning Phase Form -->
                        <div invisible="not planning_phase_id">
                            <field name="planning_phase_id" mode="form" 
                                   context="{'default_audit_id': active_id}"
                                   options="{'no_create': True}">
                                <form string="Planning Phase">
                                    <header>
                                        <button name="action_start_planning" string="Start Planning" 
                                                type="object" class="btn-primary" 
                                                invisible="state != 'draft'"/>
                                        <button name="action_submit_review" string="Submit for Review" 
                                                type="object" class="btn-primary" 
                                                invisible="state != 'in_progress'"/>
                                        <button name="action_approve" string="Approve" 
                                                type="object" class="btn-success" 
                                                invisible="state != 'review'"/>
                                        <button name="action_reset_draft" string="Reset to Draft" 
                                                type="object" 
                                                invisible="state == 'draft'"/>
                                        <field name="state" widget="statusbar" 
                                               statusbar_visible="draft,in_progress,review,approved"/>
                                    </header>
                                    <sheet>
                                        <group>
                                            <field name="audit_id" invisible="1"/>
                                            <field name="client_id" invisible="1"/>
                                            <field name="currency_id" invisible="1"/>
                                        </group>
                                        
                                        <notebook>
                                            <!-- Client Information Tab -->
                                            <page name="client_info" string="Client Information">
                                                <group>
                                                    <group string="Industry &amp; Business">
                                                        <field name="industry_sector_id" options="{'no_create': True}"/>
                                                        <field name="business_nature" placeholder="Describe the nature of client's business..."/>
                                                    </group>
                                                    <group string="Key Personnel">
                                                        <field name="key_personnel" placeholder="List key client personnel and their roles..."/>
                                                    </group>
                                                </group>
                                            </page>
                                            
                                            <!-- Engagement Details Tab -->
                                            <page name="engagement" string="Engagement Details">
                                                <group>
                                                    <group string="Engagement Information">
                                                        <field name="engagement_type"/>
                                                        <field name="reporting_framework"/>
                                                    </group>
                                                    <group string="Timeline">
                                                        <field name="planning_start_date"/>
                                                        <field name="planning_end_date"/>
                                                        <field name="fieldwork_start_date"/>
                                                        <field name="fieldwork_end_date"/>
                                                        <field name="estimated_hours"/>
                                                    </group>
                                                </group>
                                                <group>
                                                    <field name="audit_scope" placeholder="Define the scope and objectives of the audit..."/>
                                                </group>
                                            </page>
                                            
                                            <!-- Risk Assessment Tab -->
                                            <page name="risk" string="Risk Assessment">
                                                <group>
                                                    <group string="Risk Levels">
                                                        <field name="inherent_risk"/>
                                                        <field name="control_risk"/>
                                                        <field name="detection_risk"/>
                                                    </group>
                                                    <group string="Risk Analysis">
                                                        <field name="key_risk_areas" placeholder="Identify key risk areas..."/>
                                                        <field name="fraud_risk_assessment" placeholder="Document fraud risk assessment..."/>
                                                    </group>
                                                </group>
                                            </page>
                                            
                                            <!-- Materiality Tab -->
                                            <page name="materiality" string="Materiality">
                                                <group>
                                                    <group string="Materiality Calculations">
                                                        <field name="materiality_basis"/>
                                                        <field name="overall_materiality"/>
                                                        <field name="performance_materiality"/>
                                                        <field name="trivial_threshold"/>
                                                    </group>
                                                </group>
                                            </page>
                                            
                                            <!-- Checklists Tab -->
                                            <page name="checklist" string="Planning Checklist">
                                                <group>
                                                    <group string="Engagement Setup">
                                                        <field name="engagement_letter_signed"/>
                                                        <field name="independence_confirmed"/>
                                                        <field name="previous_auditor_communication"/>
                                                    </group>
                                                    <group string="Planning Procedures">
                                                        <field name="understanding_entity_obtained"/>
                                                        <field name="internal_controls_documented"/>
                                                        <field name="analytical_procedures_performed"/>
                                                    </group>
                                                </group>
                                            </page>
                                            
                                            <!-- Documents &amp; Notes Tab -->
                                            <page name="documents" string="Documents &amp; Notes">
                                                <group>
                                                    <field name="planning_notes" placeholder="Enter planning notes and observations..."/>
                                                </group>
                                                <group string="Planning Documents">
                                                    <field name="planning_attachments" widget="many2many_binary" nolabel="1"/>
                                                </group>
                                            </page>
                                        </notebook>
                                    </sheet>
                                    <div class="oe_chatter">
                                        <field name="message_follower_ids"/>
                                        <field name="activity_ids"/>
                                        <field name="message_ids"/>
                                    </div>
                                </form>
                            </field>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
