<odoo>
    <data>
        <record id="action_planning_phase" model="ir.actions.act_window">
            <field name="name">Planning Phase</field>
            <field name="res_model">qaco.planning.phase</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Planning Phase Record
                </p>
                <p>
                    Document the planning phase of your audit process including risk assessment,
                    materiality determination, and planning procedures per ISA standards.
                </p>
            </field>
        </record>

        <record id="action_planning_risk" model="ir.actions.act_window">
            <field name="name">Planning Risks</field>
            <field name="res_model">qaco.planning.risk</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_risk_assessment" model="ir.actions.act_window">
            <field name="name">Risk Assessments</field>
            <field name="res_model">qaco.risk.assessment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_planning_checklist" model="ir.actions.act_window">
            <field name="name">Planning Checklist</field>
            <field name="res_model">qaco.planning.checklist</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_planning_materiality" model="ir.actions.act_window">
            <field name="name">Materiality Worksheets</field>
            <field name="res_model">qaco.materiality</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_planning_pbc" model="ir.actions.act_window">
            <field name="name">Information Requisitions</field>
            <field name="res_model">qaco.planning.pbc</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_planning_pbc_templates" model="ir.actions.act_window">
            <field name="name">Information Requisition Templates</field>
            <field name="res_model">qaco.planning.pbc.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_planning_milestone" model="ir.actions.act_window">
            <field name="name">Planning Milestones</field>
            <field name="res_model">qaco.planning.milestone</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
