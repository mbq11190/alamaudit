<odoo>
    <data>
        <!-- Law Master Views -->
        <record id="view_law_master_tree" model="ir.ui.view">
            <field name="name">qaco.law.master.tree</field>
            <field name="model">qaco.law.master</field>
            <field name="arch" type="xml">
                <tree string="Laws &amp; Regulations">
                    <field name="name"/>
                    <field name="law_category"/>
                    <field name="section_reference"/>
                </tree>
            </field>
        </record>

        <record id="view_law_master_form" model="ir.ui.view">
            <field name="name">qaco.law.master.form</field>
            <field name="model">qaco.law.master</field>
            <field name="arch" type="xml">
                <form string="Law / Regulation">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="law_category"/>
                                <field name="checklist_template_id"/>
                            </group>
                            <group>
                                <field name="section_reference"/>
                                <field name="note"/>
                            </group>
                        </group>
                        <group string="Checklist Templates">
                            <field name="checklist_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="law_id"/>
                                    <field name="reviewer_notes"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Law Checklist Views -->
        <record id="view_law_checklist_tree" model="ir.ui.view">
            <field name="name">qaco.law.checklist.tree</field>
            <field name="model">qaco.law.checklist</field>
            <field name="arch" type="xml">
                <tree string="Law Checklists">
                    <field name="name"/>
                    <field name="law_id"/>
                    <field name="reviewer_notes"/>
                </tree>
            </field>
        </record>

        <record id="view_law_checklist_form" model="ir.ui.view">
            <field name="name">qaco.law.checklist.form</field>
            <field name="model">qaco.law.checklist</field>
            <field name="arch" type="xml">
                <form string="Law Checklist">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="law_id"/>
                            </group>
                            <group>
                                <field name="reviewer_notes"/>
                            </group>
                        </group>
                        <group string="Checklist Lines">
                            <field name="line_ids" editable="bottom">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="control_procedure"/>
                                    <field name="evidence_reference"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                    </group>
                                    <group>
                                        <field name="control_procedure"/>
                                        <field name="evidence_reference"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Client Law Mapping Views -->
        <record id="view_client_law_mapping_tree" model="ir.ui.view">
            <field name="name">qaco.client.law.mapping.tree</field>
            <field name="model">qaco.client.law.mapping</field>
            <field name="arch" type="xml">
                <tree string="Client Laws" decoration-danger="compliance_status == 'non_compliant'" decoration-warning="compliance_status == 'under_dispute'">
                    <field name="client_id"/>
                    <field name="law_id"/>
                    <field name="applicable"/>
                    <field name="compliance_status"/>
                    <field name="compliance_owner_id"/>
                    <field name="next_compliance_review_due"/>
                </tree>
            </field>
        </record>

        <record id="view_client_law_mapping_form" model="ir.ui.view">
            <field name="name">qaco.client.law.mapping.form</field>
            <field name="model">qaco.client.law.mapping</field>
            <field name="arch" type="xml">
                <form string="Client Law Mapping">
                    <sheet>
                        <group>
                            <group>
                                <field name="client_id"/>
                                <field name="law_id"/>
                                <field name="applicable"/>
                                <field name="applicability_scope"/>
                                <field name="compliance_status"/>
                            </group>
                            <group>
                                <field name="planning_id"/>
                                <field name="compliance_owner_id"/>
                                <field name="last_compliance_review_date"/>
                                <field name="next_compliance_review_due"/>
                                <field name="execution_checklist_id"/>
                            </group>
                        </group>
                        <group string="Narrative">
                            <field name="key_risks_summary" placeholder="Describe key risks / disputes / regulator focus."/>
                        </group>
                        <group string="Checklist">
                            <group>
                                <field name="law_applicability_reviewed"/>
                                <field name="law_applicability_reviewed_comment"/>
                            </group>
                            <group>
                                <field name="law_significant_non_compliances"/>
                                <field name="law_significant_non_compliances_comment"/>
                            </group>
                            <group>
                                <field name="law_unrecorded_provisions"/>
                                <field name="law_unrecorded_provisions_comment"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_law_master" model="ir.actions.act_window">
            <field name="name">Law Master</field>
            <field name="res_model">qaco.law.master</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_law_master_tree"/>
        </record>

        <record id="action_law_checklist" model="ir.actions.act_window">
            <field name="name">Law Checklists</field>
            <field name="res_model">qaco.law.checklist</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_law_checklist_tree"/>
        </record>

        <record id="action_client_law_mapping" model="ir.actions.act_window">
            <field name="name">Client Law Mapping</field>
            <field name="res_model">qaco.client.law.mapping</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_client_law_mapping_tree"/>
        </record>

        <!-- Menus -->
        <menuitem id="menu_law_environment" name="Laws &amp; Compliance" parent="menu_planning_phase" sequence="60"/>
        <menuitem id="menu_law_master" name="Law Master" parent="menu_law_environment" action="action_law_master" sequence="1"/>
        <menuitem id="menu_law_checklist" name="Law Checklists" parent="menu_law_environment" action="action_law_checklist" sequence="2"/>
        <menuitem id="menu_client_law_mapping" name="Client Law Mapping" parent="menu_law_environment" action="action_client_law_mapping" sequence="3"/>
    </data>
</odoo>
