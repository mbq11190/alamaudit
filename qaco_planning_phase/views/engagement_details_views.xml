<odoo>
    <data>
        <!-- TREE VIEW -->
        <record id="view_engagement_details_tree" model="ir.ui.view">
            <field name="name">qaco.engagement.details.tree</field>
            <field name="model">qaco.engagement.details</field>
            <field name="arch" type="xml">
                <tree string="Engagement Details">
                    <field name="name"/>
                    <field name="audit_year"/>
                    <field name="entity_class"/>
                    <field name="engagement_type"/>
                    <field name="engagement_partner"/>
                    <field name="engagement_manager"/>
                    <field name="expected_report_date"/>
                    <field name="report_type"/>
                    <field name="management_override_risk"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="view_engagement_details_form" model="ir.ui.view">
            <field name="name">qaco.engagement.details.form</field>
            <field name="model">qaco.engagement.details</field>
            <field name="arch" type="xml">
                <form string="Engagement Details">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <div class="oe_edit_only" string=""/>
                        </div>

                        <group>
                            <group>
                                <field name="audit_year"/>
                                <field name="entity_class"/>
                                <field name="engagement_type"/>
                                <field name="reporting_framework"/>
                            </group>
                            <group>
                                <field name="basis_of_accounting"/>
                                <field name="special_purpose_framework"/>
                                <field name="period_start"/>
                                <field name="period_end"/>
                            </group>
                        </group>

                        <group string="Engagement Context">
                            <field name="engagement_purpose"/>
                            <field name="applicable_laws"/>
                            <field name="deliverables"/>
                        </group>

                        <notebook>

                            <!-- A. ENGAGEMENT INFORMATION -->
                            <page string="Engagement Information">
                                <group>
                                    <group>
                                        <field name="planning_start"/>
                                        <field name="planning_end"/>
                                        <field name="planning_meeting_date"/>
                                        <field name="expected_completion"/>
                                    </group>
                                    <group>
                                        <field name="fieldwork_start"/>
                                        <field name="fieldwork_end"/>
                                        <field name="final_review_date"/>
                                        <field name="expected_report_date"/>
                                        <field name="audit_committee_meeting"/>
                                    </group>
                                </group>
                            </page>

                            <!-- B. PRECONDITIONS -->
                            <page string="Preconditions (ISA 210)">
                                <group>
                                    <group>
                                        <field name="framework_acceptability"/>
                                        <field name="mgmt_responsibility_ack"/>
                                        <field name="info_access_agreed"/>
                                        <field name="preconditions_met"/>
                                    </group>
                                    <group>
                                        <field name="scope_limitation" colspan="2"/>
                                    </group>
                                </group>
                            </page>

                            <!-- C. Engagement Letter -->
                            <page string="Engagement Letter">
                                <group>
                                    <group>
                                        <field name="engagement_letter_issued"/>
                                        <field name="engagement_letter_date"/>
                                        <field name="engagement_letter_reference"/>
                                    </group>
                                    <group>
                                        <field name="signed_engagement_letter" filename="signed_engagement_letter_filename"/>
                                        <field name="client_signed_copy" filename="client_signed_copy_filename"/>
                                    </group>
                                </group>
                            </page>

                            <!-- D. Scope & Objectives -->
                            <page string="Scope &amp; Objectives">
                                <group>
                                    <field name="audit_scope"/>
                                    <field name="audit_objectives"/>
                                    <field name="inherent_limitations"/>
                                    <field name="specialists_involved"/>
                                </group>
                            </page>

                            <!-- E. Team -->
                            <page string="Team &amp; Responsibilities (ISA 220)">
                                <group>
                                    <group>
                                        <field name="engagement_partner"/>
                                        <field name="engagement_manager"/>
                                        <field name="eqcr_reviewer"/>
                                        <field name="specialists"/>
                                    </group>
                                    <group>
                                        <field name="competence_assessed"/>
                                        <field name="competence_assessment_notes"/>
                                        <field name="independence_confirmed"/>
                                    </group>
                                </group>
                            </page>

                            <!-- F. Materiality -->
                            <page string="Materiality Summary">
                                <group>
                                    <group>
                                        <field name="overall_materiality"/>
                                        <field name="performance_materiality"/>
                                        <field name="trivial_threshold"/>
                                    </group>
                                    <group>
                                        <field name="materiality_basis"/>
                                        <field name="materiality_rationale"/>
                                    </group>
                                </group>
                            </page>

                            <!-- G. Risk Summary -->
                            <page string="Risk Summary">
                                <group>
                                    <field name="significant_risks"/>
                                    <field name="fraud_risks"/>
                                    <field name="fs_level_risks"/>
                                    <field name="assertion_level_risks"/>
                                    <field name="management_override_risk"/>
                                </group>
                            </page>

                            <!-- H. Budget & Resources -->
                            <page string="Budget &amp; Resources">
                                <group>
                                    <group>
                                        <field name="estimated_hours"/>
                                        <field name="approved_budget_hours"/>
                                    </group>
                                    <group>
                                        <field name="fee_amount"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="staff_allocation"/>
                                </group>
                            </page>

                            <!-- I. Reporting Requirements -->
                            <page string="Reporting Requirements">
                                <group>
                                    <field name="report_type"/>
                                    <field name="other_reporting_requirements"/>
                                    <field name="required_attachments"/>
                                </group>
                            </page>

                            <!-- J. Compliance -->
                            <page string="Regulatory Compliance">
                                <group>
                                    <group>
                                        <field name="listed_entity"/>
                                        <field name="pie_status"/>
                                        <field name="aob_registration_number"/>
                                    </group>
                                    <group>
                                        <field name="sepc_aob_requirements"/>
                                        <field name="additional_secp_sros"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_engagement_details" model="ir.actions.act_window">
            <field name="name">Engagement Details</field>
            <field name="res_model">qaco.engagement.details</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
