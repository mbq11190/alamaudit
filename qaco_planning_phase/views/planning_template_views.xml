    <!-- Menu Item for Templates (under Configuration) -->
    <menuitem id="menu_planning_templates"
              name="Planning Templates"
              parent="qaco_audit.menu_audit_configuration"
              action="action_planning_template"
              sequence="30"/>

</odoo>
