<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Planning Phase Form View -->
    <record id="view_planning_phase_form" model="ir.ui.view">
        <field name="name">qaco.planning.phase.form</field>
        <field name="model">qaco.planning.phase</field>
        <field name="arch" type="xml">
            <form string="Planning Phase">
                <sheet>
                    <group>
                        <field name="audit_id" invisible="1" force_save="1"/>
                        <field name="client_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Update action to use this form -->
    <record id="action_planning_phase" model="ir.actions.act_window">
        <field name="name">Planning Phase</field>
        <field name="res_model">qaco.audit</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_planning_phase_form"/>
        <field name="target">current</field>
    </record>
</odoo>
