<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="qaco_planning_phase_rule_user" model="ir.rule">
        <field name="name">Planning Phase: User Access</field>
        <field name="model_id" ref="model_qaco_planning_phase"/>
        <field name="domain_force">['|', ('manager_signed_user_id', '=', user.id), ('partner_signed_user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">0</field>
    </record>

    <record id="qaco_planning_phase_rule_manager" model="ir.rule">
        <field name="name">Planning Phase: Manager Access</field>
        <field name="model_id" ref="model_qaco_planning_phase"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_manager'))]"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>
</odoo>
