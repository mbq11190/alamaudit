<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Mail Template: P-Tab Unlocked Notification (Session 7A) -->
        <record id="mail_template_ptab_unlocked" model="mail.template">
            <field name="name">Planning Tab Unlocked Notification</field>
            <field name="model_id" ref="model_qaco_planning_main"/>
            <field name="subject">{{ object.audit_id.name }} - Next Planning Tab Unlocked ({{ ctx.get('tab_name', 'N/A') }})</field>
            <field name="email_from">{{ (object.audit_id.partner_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ ctx.get('recipient_email', '') }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-family: Arial, sans-serif;">
    <table border="0" width="100%" cellpadding="0" bgcolor="#F5F5F5" style="padding: 20px;">
        <tr>
            <td align="center">
                <table border="0" width="600" cellpadding="0" bgcolor="#FFFFFF" style="border: 1px solid #e0e0e0; border-radius: 5px;">
                    <!-- Header -->
                    <tr>
                        <td style="padding: 20px; background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%); text-align: center;">
                            <h2 style="margin: 0; color: #ffffff; font-size: 24px;">
                                üîì Planning Tab Unlocked
                            </h2>
                        </td>
                    </tr>
                    
                    <!-- Content -->
                    <tr>
                        <td style="padding: 30px 20px;">
                            <p style="font-size: 16px; color: #333333; margin-bottom: 10px;">
                                Good news! The prerequisite tab has been approved.
                            </p>
                            
                            <div style="background-color: #e8f5e9; border-left: 4px solid #4caf50; padding: 15px; margin: 20px 0;">
                                <p style="margin: 0; font-size: 14px; color: #2e7d32;">
                                    <strong>‚úÖ Now Unlocked:</strong> {{ ctx.get('tab_name', 'N/A') }}
                                </p>
                            </div>
                            
                            <table style="width: 100%; margin: 20px 0; border-collapse: collapse;">
                                <tr>
                                    <td style="padding: 8px 0; color: #666; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        <strong>Audit Engagement:</strong>
                                    </td>
                                    <td style="padding: 8px 0; color: #333; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        {{ object.audit_id.name }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0; color: #666; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        <strong>Client:</strong>
                                    </td>
                                    <td style="padding: 8px 0; color: #333; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        {{ object.audit_id.client_id.name }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0; color: #666; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        <strong>Prerequisite Approved:</strong>
                                    </td>
                                    <td style="padding: 8px 0; color: #333; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        {{ ctx.get('prerequisite_tab', 'N/A') }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0; color: #666; font-size: 14px;">
                                        <strong>Approved By:</strong>
                                    </td>
                                    <td style="padding: 8px 0; color: #333; font-size: 14px;">
                                        {{ ctx.get('approver_name', user.name) }}
                                    </td>
                                </tr>
                            </table>
                            
                            <p style="font-size: 14px; color: #555; margin-top: 20px;">
                                You can now begin work on <strong>{{ ctx.get('tab_name', 'this tab') }}</strong>. 
                                Please review the ISA requirements and complete all mandatory fields before submission.
                            </p>
                            
                            <!-- Action Button -->
                            <div style="text-align: center; margin: 30px 0;">
                                <a href="{{ ctx.get('tab_url', '#') }}" 
                                   style="background-color: #1e88e5; color: #ffffff; padding: 12px 30px; 
                                          text-decoration: none; border-radius: 5px; font-size: 16px; 
                                          display: inline-block;">
                                    Open Planning Tab ‚Üí
                                </a>
                            </div>
                            
                            <div style="background-color: #fff3cd; border-left: 4px solid #ffc107; padding: 15px; margin: 20px 0;">
                                <p style="margin: 0; font-size: 13px; color: #856404;">
                                    <strong>‚ö†Ô∏è ISA 300 Reminder:</strong> Planning must be completed before execution begins. 
                                    Ensure all sections are approved before locking the planning phase.
                                </p>
                            </div>
                        </td>
                    </tr>
                    
                    <!-- Footer -->
                    <tr>
                        <td style="padding: 15px 20px; background-color: #f5f5f5; text-align: center; border-top: 1px solid #e0e0e0;">
                            <p style="margin: 0; font-size: 12px; color: #888;">
                                This is an automated notification from Alam Audit Management System
                            </p>
                            <p style="margin: 5px 0 0 0; font-size: 12px; color: #888;">
                                ¬© {{ datetime.datetime.now().year }} QACO - Quality Assured Compliance Operations
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{ object.audit_id.partner_id.lang or 'en_US' }}</field>
        </record>

        <!-- Mail Template: Partner Approval Reminder (Session 7A) -->
        <record id="mail_template_partner_approval_reminder" model="mail.template">
            <field name="name">Partner Approval Reminder</field>
            <field name="model_id" ref="model_qaco_planning_main"/>
            <field name="subject">‚è∞ Approval Pending - {{ object.audit_id.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object.audit_id.partner_id.email }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-family: Arial, sans-serif;">
    <table border="0" width="100%" cellpadding="0" bgcolor="#F5F5F5" style="padding: 20px;">
        <tr>
            <td align="center">
                <table border="0" width="600" cellpadding="0" bgcolor="#FFFFFF" style="border: 1px solid #e0e0e0; border-radius: 5px;">
                    <!-- Header -->
                    <tr>
                        <td style="padding: 20px; background: linear-gradient(135deg, #ff6f00 0%, #e65100 100%); text-align: center;">
                            <h2 style="margin: 0; color: #ffffff; font-size: 24px;">
                                ‚è∞ Approval Reminder
                            </h2>
                        </td>
                    </tr>
                    
                    <!-- Content -->
                    <tr>
                        <td style="padding: 30px 20px;">
                            <p style="font-size: 16px; color: #333333; margin-bottom: 10px;">
                                Dear Partner,
                            </p>
                            
                            <p style="font-size: 14px; color: #555; margin-top: 15px;">
                                The following planning tabs are awaiting your approval for <strong>{{ object.audit_id.name }}</strong>:
                            </p>
                            
                            <div style="background-color: #fff3e0; border-left: 4px solid #ff9800; padding: 15px; margin: 20px 0;">
                                <p style="margin: 0; font-size: 14px; color: #e65100;">
                                    <strong>üìã Pending Tabs:</strong> {{ ctx.get('pending_count', '0') }} tab(s) in Reviewed status
                                </p>
                            </div>
                            
                            <table style="width: 100%; margin: 20px 0; border-collapse: collapse;">
                                <tr>
                                    <td style="padding: 8px 0; color: #666; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        <strong>Audit Engagement:</strong>
                                    </td>
                                    <td style="padding: 8px 0; color: #333; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        {{ object.audit_id.name }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0; color: #666; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        <strong>Client:</strong>
                                    </td>
                                    <td style="padding: 8px 0; color: #333; font-size: 14px; border-bottom: 1px solid #f0f0f0;">
                                        {{ object.audit_id.client_id.name }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0; color: #666; font-size: 14px;">
                                        <strong>Days Since Review:</strong>
                                    </td>
                                    <td style="padding: 8px 0; color: #333; font-size: 14px;">
                                        {{ ctx.get('days_pending', 'N/A') }} days
                                    </td>
                                </tr>
                            </table>
                            
                            <p style="font-size: 14px; color: #555; margin-top: 20px;">
                                Please review and approve these tabs at your earliest convenience to allow the audit team to proceed.
                            </p>
                            
                            <!-- Action Button -->
                            <div style="text-align: center; margin: 30px 0;">
                                <a href="{{ ctx.get('planning_url', '#') }}" 
                                   style="background-color: #ff6f00; color: #ffffff; padding: 12px 30px; 
                                          text-decoration: none; border-radius: 5px; font-size: 16px; 
                                          display: inline-block;">
                                    Review Planning Now ‚Üí
                                </a>
                            </div>
                        </td>
                    </tr>
                    
                    <!-- Footer -->
                    <tr>
                        <td style="padding: 15px 20px; background-color: #f5f5f5; text-align: center; border-top: 1px solid #e0e0e0;">
                            <p style="margin: 0; font-size: 12px; color: #888;">
                                Automated reminder from Alam Audit Management System
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{ object.audit_id.partner_id.lang or 'en_US' }}</field>
        </record>

    </data>
</odoo>
