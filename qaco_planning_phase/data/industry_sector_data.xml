<odoo>
    <data noupdate="1">
        <!-- Common Industry Sectors -->
        <record id="sector_financial_services" model="planning.industry.sector">
            <field name="name">Financial Services</field>
            <field name="sequence">10</field>
            <field name="description">Banking, insurance, investment, and other financial institutions</field>
        </record>

        <record id="sector_manufacturing" model="planning.industry.sector">
            <field name="name">Manufacturing</field>
            <field name="sequence">20</field>
            <field name="description">Production and assembly of goods</field>
        </record>

        <record id="sector_retail" model="planning.industry.sector">
            <field name="name">Retail &amp; Wholesale</field>
            <field name="sequence">30</field>
            <field name="description">Sale of goods to consumers or businesses</field>
        </record>

        <record id="sector_healthcare" model="planning.industry.sector">
            <field name="name">Healthcare</field>
            <field name="sequence">40</field>
            <field name="description">Medical services, hospitals, pharmaceuticals</field>
        </record>

        <record id="sector_technology" model="planning.industry.sector">
            <field name="name">Technology</field>
            <field name="sequence">50</field>
            <field name="description">Software, hardware, IT services</field>
        </record>

        <record id="sector_construction" model="planning.industry.sector">
            <field name="name">Construction &amp; Real Estate</field>
            <field name="sequence">60</field>
            <field name="description">Building, development, property management</field>
        </record>

        <record id="sector_hospitality" model="planning.industry.sector">
            <field name="name">Hospitality &amp; Tourism</field>
            <field name="sequence">70</field>
            <field name="description">Hotels, restaurants, travel services</field>
        </record>

        <record id="sector_energy" model="planning.industry.sector">
            <field name="name">Energy &amp; Utilities</field>
            <field name="sequence">80</field>
            <field name="description">Power generation, oil &amp; gas, utilities</field>
        </record>

        <record id="sector_education" model="planning.industry.sector">
            <field name="name">Education</field>
            <field name="sequence">90</field>
            <field name="description">Schools, universities, training institutions</field>
        </record>

        <record id="sector_nonprofit" model="planning.industry.sector">
            <field name="name">Non-Profit &amp; Government</field>
            <field name="sequence">100</field>
            <field name="description">Charities, NGOs, government entities</field>
        </record>

        <record id="sector_agriculture" model="planning.industry.sector">
            <field name="name">Agriculture</field>
            <field name="sequence">110</field>
            <field name="description">Farming, livestock, agribusiness</field>
        </record>

        <record id="sector_transportation" model="planning.industry.sector">
            <field name="name">Transportation &amp; Logistics</field>
            <field name="sequence">120</field>
            <field name="description">Shipping, freight, supply chain</field>
        </record>

        <record id="sector_other" model="planning.industry.sector">
            <field name="name">Other</field>
            <field name="sequence">999</field>
            <field name="description">Other industries not listed</field>
        </record>
    </data>
</odoo>
