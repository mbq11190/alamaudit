<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Audit Form View to add Deliverables Smart Button -->
        <record id="view_qaco_audit_form_deliverables_button" model="ir.ui.view">
            <field name="name">qaco.audit.form.deliverables.button</field>
            <field name="model">qaco.audit</field>
            <field name="inherit_id" ref="qaco_finalisation_phase.view_qaco_audit_form_finalisation_button"/>
            <field name="arch" type="xml">
                <!-- Add Deliverables button AFTER Finalisation button -->
                <xpath expr="//button[@name='action_open_finalisation_phase']" position="after">
                    <button name="action_open_deliverables" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-truck">
                        <field name="deliverables_count" widget="statinfo" string="Deliverables"/>
                        <field name="deliverables_state" invisible="1"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
