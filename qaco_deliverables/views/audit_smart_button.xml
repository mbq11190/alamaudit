<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Window action for Deliverables -->
    <record id="action_deliverables" model="ir.actions.act_window">
        <field name="name">Deliverables</field>
        <field name="res_model">qaco.deliverables</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_deliverables_form"/>
        <field name="target">current</field>
        <field name="context">{'default_audit_id': active_id}</field>
        <field name="domain">[('audit_id', '=', active_id)]</field>
    </record>

    <!-- Smart button on qaco.audit form -->
    <record id="view_qaco_audit_form_deliverables_button" model="ir.ui.view">
        <field name="name">qaco.audit.form.deliverables.button</field>
        <field name="model">qaco.audit</field>
        <field name="inherit_id" ref="qaco_finalisation_phase.view_qaco_audit_form_finalisation_button"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@icon='fa-check-circle']" position="after">
                <button class="oe_stat_button" type="action"
                        name="%(qaco_deliverables.action_open_deliverables_from_audit)d"
                        icon="fa-file-text-o">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Audit</span>
                        <span class="o_stat_text">Deliverables</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
