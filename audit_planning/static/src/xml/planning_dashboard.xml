<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="audit_planning.PlanningDashboard">
        <div class="o_planning_dashboard_cards">
            <div class="o_planning_card">
                <h4>Entity &amp; Environment</h4>
                <div class="progress">
                    <div class="progress-bar" t-att-class="component.progressClass(state.entity)" t-att-style="`width:${state.entity}%;`"></div>
                </div>
                <div class="text-muted mt-1" t-esc="state.entity.toFixed(0) + '%'"/>
            </div>
            <div class="o_planning_card">
                <h4>Analytics</h4>
                <div class="progress">
                    <div class="progress-bar" t-att-class="component.progressClass(state.analytics)" t-att-style="`width:${state.analytics}%;`"></div>
                </div>
                <div class="text-muted mt-1" t-esc="state.analytics.toFixed(0) + '%'"/>
            </div>
            <div class="o_planning_card">
                <h4>Materiality</h4>
                <div class="progress">
                    <div class="progress-bar" t-att-class="component.progressClass(state.materiality)" t-att-style="`width:${state.materiality}%;`"></div>
                </div>
                <div class="text-muted mt-1" t-esc="state.materiality.toFixed(0) + '%'"/>
            </div>
            <div class="o_planning_card">
                <h4>Controls</h4>
                <div class="progress">
                    <div class="progress-bar" t-att-class="component.progressClass(state.controls)" t-att-style="`width:${state.controls}%;`"></div>
                </div>
                <div class="text-muted mt-1" t-esc="state.controls.toFixed(0) + '%'"/>
            </div>
            <div class="o_planning_card">
                <h4>Risk &amp; Fraud</h4>
                <div class="progress">
                    <div class="progress-bar" t-att-class="component.progressClass(state.risk)" t-att-style="`width:${state.risk}%;`"></div>
                </div>
                <div class="text-muted mt-1" t-esc="state.risk.toFixed(0) + '%'"/>
            </div>
            <div class="o_planning_card">
                <h4>Checklist</h4>
                <div class="progress">
                    <div class="progress-bar" t-att-class="component.progressClass(state.checklist)" t-att-style="`width:${state.checklist}%;`"></div>
                </div>
                <div class="text-muted mt-1" t-esc="state.checklist.toFixed(0) + '%'"/>
            </div>
            <div class="o_planning_card">
                <h4>Overall</h4>
                <div class="o_planning_overall" t-esc="state.overall.toFixed(0) + '%'"/>
                <div class="progress mt-2">
                    <div class="progress-bar" t-att-class="component.progressClass(state.overall)" t-att-style="`width:${state.overall}%;`"></div>
                </div>
            </div>
        </div>
    </t>
</templates>
