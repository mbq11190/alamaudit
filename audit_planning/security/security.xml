<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_audit_staff" model="res.groups">
            <field name="name">Audit Staff</field>
            <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        </record>
        <record id="group_audit_manager" model="res.groups">
            <field name="name">Audit Manager</field>
            <field name="implied_ids" eval="[(4, ref('audit_planning.group_audit_staff'))]"/>
            <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        </record>
        <record id="group_audit_partner" model="res.groups">
            <field name="name">Audit Partner</field>
            <field name="implied_ids" eval="[(4, ref('audit_planning.group_audit_manager'))]"/>
            <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        </record>
    </data>

    <!-- Record rules -->
    <record id="rule_audit_planning_read" model="ir.rule">
        <field name="name">Audit Planning read</field>
        <field name="model_id" ref="model_audit_planning"/>
        <field name="groups" eval="[(4, ref('audit_planning.group_audit_staff')),(4, ref('audit_planning.group_audit_manager')),(4, ref('audit_planning.group_audit_partner'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
    <record id="rule_audit_planning_write" model="ir.rule">
        <field name="name">Audit Planning write</field>
        <field name="model_id" ref="model_audit_planning"/>
        <field name="groups" eval="[(4, ref('audit_planning.group_audit_staff')),(4, ref('audit_planning.group_audit_manager')),(4, ref('audit_planning.group_audit_partner'))]"/>
        <field name="domain_force">[("state", "!=", "approved")]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
