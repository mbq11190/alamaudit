<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_audit_planning_kanban" model="ir.ui.view">
        <field name="name">audit.planning.kanban</field>
        <field name="model">audit.planning</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_grouped">
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_primary_left">
                                <div class="o_kanban_record_head">
                                    <strong><field name="name"/></strong>
                                    <span class="badge" t-att-class="'badge-success' if record.state.raw_value == 'approved' else 'badge-info' if record.state.raw_value == 'in_review' else 'badge-secondary'">
                                        <field name="state" widget="statusbar"/>
                                    </span>
                                </div>
                                <div class="text-muted">
                                    <field name="client_id"/>
                                </div>
                                <div>
                                    Period: <field name="audit_period_from"/> - <field name="audit_period_to"/>
                                </div>
                            </div>
                            <div class="o_kanban_primary_right text-end">
                                <div class="o_progressbar">Overall: <field name="overall_progress" widget="progressbar"/> | Checklist: <field name="checklist_completion" widget="progressbar"/></div>
                                <div class="text-muted mt-1">Agreed: <field name="amount_agreed"/> | Start: <field name="tentative_start_date"/> | End: <field name="tentative_end_date"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
