<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ═══════════════════════════════════════════════════════════════════════
         Audit Planning Form View - 13 Tabs (P-1 through P-13)
         ISA-Compliant Statutory Audit Planning for Pakistan
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <record id="view_audit_planning_main_form" model="ir.ui.view">
        <field name="name">audit.planning.form</field>
        <field name="model">audit.planning</field>
        <field name="arch" type="xml">
            <form string="Statutory Audit Planning" class="o_audit_planning_form">
                <!-- Hidden fields for modifiers -->
                <field name="can_proceed_next" invisible="1"/>
                <field name="overall_progress" invisible="1"/>
                <field name="apm_generated" invisible="1"/>
                <field name="programs_generated" invisible="1"/>
                <field name="manager_signed" invisible="1"/>
                <field name="partner_signed" invisible="1"/>
                
                <header>
                    <!-- Navigation Buttons -->
                    <button name="action_go_back" type="object" 
                            string="← Back" class="btn-secondary"
                            invisible="current_tab == 1 or planning_state == 'locked'"/>
                    <button name="action_save_and_next" type="object" 
                            string="Save &amp; Next →" class="btn-primary oe_highlight"
                            invisible="current_tab == 13 or planning_state == 'locked'"/>
                    
                    <!-- Workflow Buttons -->
                    <button name="action_submit_for_review" type="object" 
                            string="Submit for Review" class="btn-info"
                            invisible="planning_state != 'in_progress' or overall_progress &lt; 100"/>
                    <button name="action_manager_sign" type="object" 
                            string="Manager Sign-off" class="btn-success"
                            invisible="planning_state != 'under_review' or manager_signed"/>
                    <button name="action_partner_sign" type="object" 
                            string="Partner Sign-off" class="btn-warning"
                            invisible="not manager_signed or partner_signed"/>
                    <button name="action_generate_apm" type="object" 
                            string="Generate APM" class="btn-secondary"
                            invisible="apm_generated or overall_progress &lt; 100"/>
                    <button name="action_generate_programs" type="object" 
                            string="Generate Audit Programs" class="btn-secondary"
                            invisible="programs_generated"/>
                    <button name="action_approve_planning" type="object" 
                            string="Approve Planning" class="btn-primary oe_highlight"
                            invisible="planning_state != 'under_review' or not partner_signed"/>
                    <button name="action_lock_planning" type="object" 
                            string="Lock Planning" class="btn-danger"
                            invisible="planning_state != 'approved'"/>
                    
                    <field name="planning_state" widget="statusbar" 
                           statusbar_visible="draft,in_progress,under_review,approved,locked"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_engagement" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Engagement</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" 
                                name="action_view_programs" icon="fa-list-alt"
                                invisible="not programs_generated">
                            <field name="auto_generated_program_ids" widget="statinfo" string="Programs"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="client_id" readonly="1" class="oe_inline"/>
                            <span class="mx-2">|</span>
                            <field name="current_tab" readonly="1" class="oe_inline"/>
                            <span>/13</span>
                        </div>
                    </div>
                    
                    <!-- Progress Bar -->
                    <group>
                        <group>
                            <field name="engagement_id" required="1" 
                                   readonly="planning_state != 'draft'"/>
                            <field name="partner_id"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="tabs_completed" readonly="1"/>
                            <label for="overall_progress"/>
                            <div class="o_row">
                                <field name="overall_progress" widget="progressbar" readonly="1"/>
                            </div>
                        </group>
                    </group>
                    
                    <!-- 13-Tab Notebook -->
                    <notebook class="o_planning_tabs">
                        
                        <!-- P-1: Engagement Setup & Team Assignment -->
                        <page name="p1" string="P-1: Team Setup" class="o_planning_tab">
                            <group string="ISA 210, ISA 220, ISQM-1: Engagement Setup &amp; Team Assignment">
                                <field name="p1_team_id" nolabel="1" mode="form" 
                                       context="{'form_view_ref': 'audit_planning.view_planning_p1_team_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-2: Understanding the Entity & Environment -->
                        <page name="p2" string="P-2: Entity" class="o_planning_tab">
                            <group string="ISA 315: Understanding the Entity &amp; Environment">
                                <field name="p2_entity_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p2_entity_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-3: Internal Control Understanding -->
                        <page name="p3" string="P-3: Controls" class="o_planning_tab">
                            <group string="ISA 315: Internal Control Understanding">
                                <field name="p3_controls_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p3_controls_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-4: Preliminary Analytical Procedures -->
                        <page name="p4" string="P-4: Analytics" class="o_planning_tab">
                            <group string="ISA 520: Preliminary Analytical Procedures">
                                <field name="p4_analytics_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p4_analytics_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-5: Materiality & Performance Materiality -->
                        <page name="p5" string="P-5: Materiality" class="o_planning_tab">
                            <group string="ISA 320: Materiality &amp; Performance Materiality">
                                <field name="p5_materiality_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p5_materiality_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-6: Risk Assessment (RMM) -->
                        <page name="p6" string="P-6: Risk" class="o_planning_tab">
                            <group string="ISA 315: Risk Assessment (RMM)">
                                <field name="p6_risk_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p6_risk_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-7: Fraud Risk Assessment -->
                        <page name="p7" string="P-7: Fraud" class="o_planning_tab">
                            <group string="ISA 240: Fraud Risk Assessment">
                                <field name="p7_fraud_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p7_fraud_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-8: Going Concern (Preliminary) -->
                        <page name="p8" string="P-8: Going Concern" class="o_planning_tab">
                            <group string="ISA 570: Going Concern (Preliminary)">
                                <field name="p8_going_concern_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p8_going_concern_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-9: Laws & Regulations -->
                        <page name="p9" string="P-9: Compliance" class="o_planning_tab">
                            <group string="ISA 250: Laws &amp; Regulations">
                                <field name="p9_compliance_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p9_compliance_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-10: Related Parties Planning -->
                        <page name="p10" string="P-10: Related Parties" class="o_planning_tab">
                            <group string="ISA 550: Related Parties Planning">
                                <field name="p10_related_party_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p10_related_party_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-11: Group Audit Planning -->
                        <page name="p11" string="P-11: Group Audit" class="o_planning_tab">
                            <group string="ISA 600: Group Audit Planning (if applicable)">
                                <field name="p11_group_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p11_group_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-12: Audit Strategy & Audit Plan -->
                        <page name="p12" string="P-12: Strategy" class="o_planning_tab">
                            <group string="ISA 300: Audit Strategy &amp; Audit Plan">
                                <field name="p12_strategy_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p12_strategy_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- P-13: Planning Review & Approval -->
                        <page name="p13" string="P-13: Review" class="o_planning_tab">
                            <group string="ISA 220, ISQM-1: Planning Review &amp; Approval">
                                <field name="p13_review_id" nolabel="1" mode="form"
                                       context="{'form_view_ref': 'audit_planning.view_planning_p13_review_embedded'}"/>
                            </group>
                        </page>
                        
                        <!-- APM & Programs Tab -->
                        <page name="apm" string="APM &amp; Programs" class="o_planning_tab">
                            <group string="Audit Planning Memorandum">
                                <group>
                                    <field name="apm_generated" readonly="1"/>
                                    <field name="apm_generated_on" readonly="1"/>
                                    <field name="apm_version" readonly="1"/>
                                    <field name="apm_attachment_id" readonly="1"/>
                                </group>
                            </group>
                            <group string="Auto-Generated Audit Programs">
                                <field name="auto_generated_program_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="cycle"/>
                                        <field name="name"/>
                                        <field name="risk_level"/>
                                        <field name="sample_size"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        
                    </notebook>
                    
                    <!-- Review Notes -->
                    <group string="Review Notes" invisible="planning_state not in ('under_review', 'approved', 'locked')">
                        <field name="review_notes" nolabel="1"/>
                    </group>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_audit_planning_main_tree" model="ir.ui.view">
        <field name="name">audit.planning.tree</field>
        <field name="model">audit.planning</field>
        <field name="arch" type="xml">
            <tree string="Audit Planning" decoration-success="planning_state == 'approved'" 
                  decoration-warning="planning_state == 'under_review'"
                  decoration-muted="planning_state == 'locked'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="partner_id"/>
                <field name="overall_progress" widget="progressbar"/>
                <field name="tabs_completed"/>
                <field name="planning_state" widget="badge"/>
                <field name="apm_generated"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_audit_planning_main_search" model="ir.ui.view">
        <field name="name">audit.planning.search</field>
        <field name="model">audit.planning</field>
        <field name="arch" type="xml">
            <search string="Search Planning">
                <field name="name"/>
                <field name="client_id"/>
                <field name="partner_id"/>
                <filter string="Draft" name="draft" domain="[('planning_state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('planning_state', '=', 'in_progress')]"/>
                <filter string="Under Review" name="under_review" domain="[('planning_state', '=', 'under_review')]"/>
                <filter string="Approved" name="approved" domain="[('planning_state', '=', 'approved')]"/>
                <filter string="Locked" name="locked" domain="[('planning_state', '=', 'locked')]"/>
                <separator/>
                <filter string="APM Generated" name="apm" domain="[('apm_generated', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'planning_state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_audit_planning_main" model="ir.actions.act_window">
        <field name="name">Statutory Audit Planning</field>
        <field name="res_model">audit.planning</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_audit_planning_main_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Statutory Audit Planning
            </p>
            <p>
                ISA-compliant planning with 13 mandatory tabs covering all aspects of audit planning per ICAP/AOB requirements.
            </p>
        </field>
    </record>
    
</odoo>
