<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ═══════════════════════════════════════════════════════════════════════
         Auto-Generated Audit Programs Views
         Risk-based programs from P-6 Risk Assessment
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Tree View -->
    <record id="view_audit_planning_program_tree" model="ir.ui.view">
        <field name="name">audit.planning.program.tree</field>
        <field name="model">audit.planning.program</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="cycle"/>
                <field name="risk_level" decoration-danger="risk_level == 'high'" 
                       decoration-warning="risk_level == 'moderate'"
                       decoration-success="risk_level == 'low'"/>
                <field name="sample_size"/>
                <field name="prepared_by"/>
                <field name="reviewed_by"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'finalized'"
                       decoration-info="status == 'draft'"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_audit_planning_program_form" model="ir.ui.view">
        <field name="name">audit.planning.program.form</field>
        <field name="model">audit.planning.program</field>
        <field name="arch" type="xml">
            <form string="Audit Program">
                <header>
                    <button name="action_finalize" type="object" string="Finalize" 
                            class="btn-primary" invisible="status == 'finalized'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,finalized"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Program Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="planning_id" readonly="1"/>
                            <field name="cycle"/>
                            <field name="risk_level"/>
                            <field name="sample_size"/>
                        </group>
                        <group>
                            <field name="prepared_by"/>
                            <field name="prepared_on"/>
                            <field name="reviewed_by"/>
                            <field name="reviewed_on"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Objective &amp; Approach" name="objective">
                            <group string="Audit Objective">
                                <field name="objective" nolabel="1" colspan="2"/>
                            </group>
                            <group string="Risks Addressed">
                                <field name="risks_addressed" nolabel="1" colspan="2"/>
                            </group>
                        </page>
                        
                        <page string="Nature, Timing &amp; Extent" name="nte">
                            <group>
                                <group string="Nature of Procedures">
                                    <field name="nature_of_procedures" nolabel="1"/>
                                </group>
                                <group string="Timing of Procedures">
                                    <field name="timing_of_procedures" nolabel="1"/>
                                </group>
                            </group>
                            <group string="Extent of Procedures">
                                <field name="extent_of_procedures" nolabel="1" colspan="2"/>
                            </group>
                            <group string="Sample Size Logic">
                                <field name="sample_size_logic" nolabel="1" colspan="2"/>
                            </group>
                        </page>
                        
                        <page string="Procedures" name="procedures">
                            <field name="procedure_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="procedure_type"/>
                                    <field name="assertion"/>
                                    <field name="sample_size"/>
                                    <field name="timing"/>
                                    <field name="assigned_to"/>
                                    <field name="status" widget="badge"/>
                                    <field name="workpaper_ref"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Procedure Tree View (Inline) -->
    <record id="view_audit_planning_program_procedure_tree" model="ir.ui.view">
        <field name="name">audit.planning.program.procedure.tree</field>
        <field name="model">audit.planning.program.procedure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="procedure_type"/>
                <field name="assertion"/>
                <field name="sample_size"/>
                <field name="timing"/>
                <field name="assigned_to"/>
                <field name="status" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_audit_planning_program_search" model="ir.ui.view">
        <field name="name">audit.planning.program.search</field>
        <field name="model">audit.planning.program</field>
        <field name="arch" type="xml">
            <search string="Search Programs">
                <field name="name"/>
                <field name="cycle"/>
                <field name="planning_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Finalized" name="finalized" domain="[('status', '=', 'finalized')]"/>
                <separator/>
                <filter string="High Risk" name="high" domain="[('risk_level', '=', 'high')]"/>
                <filter string="Moderate Risk" name="moderate" domain="[('risk_level', '=', 'moderate')]"/>
                <filter string="Low Risk" name="low" domain="[('risk_level', '=', 'low')]"/>
                <group expand="0" string="Group By">
                    <filter string="Cycle" name="group_cycle" context="{'group_by': 'cycle'}"/>
                    <filter string="Risk Level" name="group_risk" context="{'group_by': 'risk_level'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_audit_planning_program" model="ir.actions.act_window">
        <field name="name">Audit Programs</field>
        <field name="res_model">audit.planning.program</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_audit_planning_program_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No audit programs yet
            </p>
            <p>
                Audit programs are auto-generated from the Risk Assessment (P-6) tab in Statutory Planning.
            </p>
        </field>
    </record>
    
</odoo>
