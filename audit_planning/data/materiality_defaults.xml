<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ═══════════════════════════════════════════════════════════════════════
             Materiality Default Settings for Pakistan Statutory Audits
             Per ISA 320 - Materiality in Planning and Performing an Audit
             ═══════════════════════════════════════════════════════════════════════ -->
        
        <!-- Materiality Benchmark Configurations -->
        <record id="materiality_benchmark_revenue" model="audit.materiality.benchmark">
            <field name="name">Revenue / Turnover</field>
            <field name="code">revenue</field>
            <field name="default_percentage">0.5</field>
            <field name="min_percentage">0.25</field>
            <field name="max_percentage">2.0</field>
            <field name="description">Applicable for profit-oriented entities where revenue is a key performance indicator.</field>
            <field name="entity_types">manufacturing,trading,services</field>
            <field name="isa_guidance">ISA 320.A8 - Revenue is commonly used as benchmark for manufacturing and trading entities.</field>
        </record>
        
        <record id="materiality_benchmark_total_assets" model="audit.materiality.benchmark">
            <field name="name">Total Assets</field>
            <field name="code">total_assets</field>
            <field name="default_percentage">1.0</field>
            <field name="min_percentage">0.5</field>
            <field name="max_percentage">2.0</field>
            <field name="description">Applicable for asset-intensive entities or financial institutions.</field>
            <field name="entity_types">financial,public</field>
            <field name="isa_guidance">ISA 320.A8 - Total assets appropriate for entities where assets drive business value.</field>
        </record>
        
        <record id="materiality_benchmark_profit" model="audit.materiality.benchmark">
            <field name="name">Profit Before Tax</field>
            <field name="code">profit_before_tax</field>
            <field name="default_percentage">5.0</field>
            <field name="min_percentage">3.0</field>
            <field name="max_percentage">10.0</field>
            <field name="description">Applicable for stable profit-generating entities.</field>
            <field name="entity_types">manufacturing,trading,services,financial</field>
            <field name="isa_guidance">ISA 320.A8 - Profit before tax is frequently used for profit-oriented entities in general industry.</field>
        </record>
        
        <record id="materiality_benchmark_equity" model="audit.materiality.benchmark">
            <field name="name">Total Equity</field>
            <field name="code">equity</field>
            <field name="default_percentage">1.0</field>
            <field name="min_percentage">0.5</field>
            <field name="max_percentage">3.0</field>
            <field name="description">Applicable for entities where equity or net asset position is significant.</field>
            <field name="entity_types">nonprofit,public</field>
            <field name="isa_guidance">ISA 320.A8 - Equity may be used for entities where debt-to-equity ratios are critical.</field>
        </record>
        
        <record id="materiality_benchmark_expenses" model="audit.materiality.benchmark">
            <field name="name">Total Expenses</field>
            <field name="code">total_expenses</field>
            <field name="default_percentage">1.0</field>
            <field name="min_percentage">0.5</field>
            <field name="max_percentage">2.0</field>
            <field name="description">Applicable for not-for-profit entities or governmental entities.</field>
            <field name="entity_types">nonprofit,public</field>
            <field name="isa_guidance">ISA 320.A8 - Total expenses or expenditures used for public sector/not-for-profit entities.</field>
        </record>
        
        <!-- Performance Materiality Default Settings -->
        <record id="performance_materiality_default" model="audit.materiality.setting">
            <field name="name">Performance Materiality - Standard</field>
            <field name="setting_type">performance_materiality</field>
            <field name="default_percentage">75.0</field>
            <field name="min_percentage">50.0</field>
            <field name="max_percentage">75.0</field>
            <field name="description">Standard performance materiality as percentage of overall materiality per ISA 320.A11.</field>
            <field name="isa_guidance">ISA 320.A11 - PM is set to reduce to appropriately low level the probability that aggregate of uncorrected and undetected misstatements exceeds materiality.</field>
        </record>
        
        <record id="performance_materiality_high_risk" model="audit.materiality.setting">
            <field name="name">Performance Materiality - High Risk</field>
            <field name="setting_type">performance_materiality</field>
            <field name="default_percentage">50.0</field>
            <field name="min_percentage">40.0</field>
            <field name="max_percentage">60.0</field>
            <field name="description">Lower performance materiality for high-risk engagements.</field>
            <field name="isa_guidance">ISA 320.A12 - Lower PM when expected misstatements based on past experience or risk assessment.</field>
        </record>
        
        <!-- Clearly Trivial Threshold Settings -->
        <record id="trivial_threshold_default" model="audit.materiality.setting">
            <field name="name">Clearly Trivial Threshold - Standard</field>
            <field name="setting_type">trivial_threshold</field>
            <field name="default_percentage">5.0</field>
            <field name="min_percentage">3.0</field>
            <field name="max_percentage">5.0</field>
            <field name="description">Standard clearly trivial threshold as percentage of overall materiality.</field>
            <field name="isa_guidance">ISA 450.A2 - Amount below which misstatements would be clearly trivial and would not need accumulation.</field>
        </record>
        
        <!-- Pakistan-Specific Materiality Considerations -->
        <record id="pakistan_secp_listed" model="audit.materiality.consideration">
            <field name="name">SECP Listed Companies</field>
            <field name="consideration_type">regulatory</field>
            <field name="description">Listed companies under SECP require enhanced scrutiny. Consider lower materiality thresholds.</field>
            <field name="recommended_adjustment">-10</field>
            <field name="applicable_entity_types">financial,manufacturing,trading</field>
            <field name="regulatory_reference">Companies Act 2017, SECP Listed Companies Regulations</field>
        </record>
        
        <record id="pakistan_banking_sector" model="audit.materiality.consideration">
            <field name="name">Banking Sector Entities</field>
            <field name="consideration_type">regulatory</field>
            <field name="description">Banks and financial institutions regulated by SBP require enhanced materiality considerations.</field>
            <field name="recommended_adjustment">-15</field>
            <field name="applicable_entity_types">financial</field>
            <field name="regulatory_reference">SBP Prudential Regulations, Banking Companies Ordinance</field>
        </record>
        
        <record id="pakistan_nbfc" model="audit.materiality.consideration">
            <field name="name">Non-Banking Finance Companies</field>
            <field name="consideration_type">regulatory</field>
            <field name="description">NBFCs under SECP regulation require specific materiality considerations.</field>
            <field name="recommended_adjustment">-10</field>
            <field name="applicable_entity_types">financial</field>
            <field name="regulatory_reference">SECP Non-Banking Finance Companies Rules</field>
        </record>
        
        <record id="pakistan_insurance" model="audit.materiality.consideration">
            <field name="name">Insurance Companies</field>
            <field name="consideration_type">regulatory</field>
            <field name="description">Insurance entities under SECP require specific solvency-based materiality.</field>
            <field name="recommended_adjustment">-10</field>
            <field name="applicable_entity_types">financial</field>
            <field name="regulatory_reference">Insurance Ordinance 2000, SECP Insurance Rules</field>
        </record>
    </data>
</odoo>
