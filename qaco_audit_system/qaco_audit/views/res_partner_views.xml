<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_audit_form" model="ir.ui.view">
        <field name="name">res.partner.audit.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group>
                    <field name="is_qaco_audit_client"/>
                </group>
                <group>
                    <field name="audit_engagement_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="risk_rating"/>
                        </tree>
                    </field>
                </group>
            </sheet>
        </field>
    </record>
</odoo>