<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="engagement_letter_template" name="Audit Engagement Letter">
        <t t-call="web.html_container">
            <t t-set="partner" t-value="record.client_id"/>
            <div class="oe_structure">
                <h2>Audit Engagement Agreement</h2>
                <p>Reference: <t t-esc="record.name"/></p>
                <p>Client: <t t-esc="partner.name"/></p>
                <p>We acknowledge receipt of your engagement terms and confirm the engagement begins upon fulfillment of pre-conditions.</p>
                <p>Regulatory Body: <t t-esc="record.regulatory_body or 'N/A'"/></p>
                <p><strong>Scope:</strong> Financial statement audit in accordance with SECP and FMU AML/CFT guidance.</p>
                <p><strong>Team:</strong> Lead partner, EQCR reviewer (<t t-esc="record.eqcr_required and 'Required' or 'Not Required'"/>).</p>
                <p>Prepared on <t t-esc="(fields.Date.context_today(record) or '')"/></p>
            </div>
        </t>
    </template>
</odoo>