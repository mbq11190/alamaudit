<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="assertion_existence" model="audit.assertion">
        <field name="sequence">10</field>
        <field name="name">Existence/Occurrence</field>
        <field name="code">EXIST</field>
        <field name="description">Assets, liabilities, and equity interests exist and recorded transactions have occurred.</field>
    </record>

    <record id="assertion_completeness" model="audit.assertion">
        <field name="sequence">20</field>
        <field name="name">Completeness</field>
        <field name="code">COMP</field>
        <field name="description">All transactions and accounts that should be presented are included.</field>
    </record>

    <record id="assertion_valuation" model="audit.assertion">
        <field name="sequence">30</field>
        <field name="name">Valuation</field>
        <field name="code">VAL</field>
        <field name="description">Assets, liabilities, and equity interests are included at appropriate amounts.</field>
    </record>

    <record id="assertion_rights" model="audit.assertion">
        <field name="sequence">40</field>
        <field name="name">Rights and Obligations</field>
        <field name="code">RIGHTS</field>
        <field name="description">Entity holds rights to assets and liabilities are obligations.</field>
    </record>

    <record id="assertion_presentation" model="audit.assertion">
        <field name="sequence">50</field>
        <field name="name">Presentation and Disclosure</field>
        <field name="code">PRES</field>
        <field name="description">Items are properly classified, described, and disclosed.</field>
    </record>

    <record id="procedure_risk_assessment_1" model="audit.procedure.template">
        <field name="sequence">10</field>
        <field name="name">Inquire of management about fraud risks</field>
        <field name="code">RA001</field>
        <field name="procedure_type">risk_assessment</field>
        <field name="nature_applicable">all</field>
        <field name="description">Discuss with management the processes for identifying and assessing fraud risks and the controls in place to address those risks.</field>
        <field name="assertion_ids" eval="[(6, 0, [ref('assertion_existence'), ref('assertion_completeness')])]"/>
    </record>

    <record id="procedure_substantive_1" model="audit.procedure.template">
        <field name="sequence">20</field>
        <field name="name">Confirm accounts receivable balances</field>
        <field name="code">SUB001</field>
        <field name="procedure_type">substantive</field>
        <field name="nature_applicable">asset</field>
        <field name="description">Send confirmation requests to customers to verify the existence and accuracy of accounts receivable balances.</field>
        <field name="assertion_ids" eval="[(6, 0, [ref('assertion_existence'), ref('assertion_valuation')])]"/>
    </record>

    <record id="procedure_analytical_1" model="audit.procedure.template">
        <field name="sequence">30</field>
        <field name="name">Analyze revenue trends</field>
        <field name="code">ANAL001</field>
        <field name="procedure_type">analytical</field>
        <field name="nature_applicable">revenue</field>
        <field name="description">Compare current period revenue with prior periods and budget, investigate significant fluctuations.</field>
        <field name="assertion_ids" eval="[(6, 0, [ref('assertion_completeness'), ref('assertion_valuation')])]"/>
    </record>

    <record id="procedure_controls_1" model="audit.procedure.template">
        <field name="sequence">40</field>
        <field name="name">Test revenue recognition controls</field>
        <field name="code">CTRL001</field>
        <field name="procedure_type">test_of_controls</field>
        <field name="nature_applicable">revenue</field>
        <field name="description">Test the operating effectiveness of controls over revenue recognition and cut-off.</field>
        <field name="assertion_ids" eval="[(6, 0, [ref('assertion_existence'), ref('assertion_completeness')])]"/>
    </record>
</odoo>
