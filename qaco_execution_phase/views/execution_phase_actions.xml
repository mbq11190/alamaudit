<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_qaco_execution_phase" model="ir.actions.act_window">
        <field name="name">Execution Phases</field>
        <field name="res_model">qaco.execution.phase</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new execution phase</p>
            <p>
                The Execution Phase module manages substantive testing, control testing,
                and evidence gathering for audit engagements.
            </p>
        </field>
    </record>

    <record id="action_open_execution_phase_from_audit" model="ir.actions.act_window">
        <field name="name">Open Execution Phase</field>
        <field name="res_model">qaco.execution.phase</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'default_audit_id': active_id}</field>
        <field name="domain">[('audit_id', '=', active_id)]</field>
    </record>

    <menuitem id="menu_qaco_execution_phase" name="Execution Phases"
              parent="qaco_audit.menu_1"
              action="action_qaco_execution_phase" sequence="20"/>
</odoo>