<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_simple_execution_phase_tree" model="ir.ui.view">
        <field name="name">execution.phase.tree</field>
        <field name="model">execution.phase</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='completed'" decoration-warning="state=='under_review'" decoration-danger="state=='draft'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="audit_lead_id"/>
                <field name="date_start"/>
                <field name="state" widget="statusbar"/>
                <field name="overall_progress" widget="progressbar" options="{'edit': False}"/>
                <field name="completed_heads_count"/>
                <field name="total_heads_count"/>
            </tree>
        </field>
    </record>

    <record id="view_simple_execution_phase_form" model="ir.ui.view">
        <field name="name">execution.phase.form</field>
        <field name="model">execution.phase</field>
        <field name="arch" type="xml">
            <form string="Audit Execution Phase">
                <header>
                    <button name="action_confirm_heads" type="object" string="Confirm Heads &amp; Start Execution" class="btn-primary" invisible="state != 'draft' or not selected_head_ids"/>
                    <button name="action_mark_review" type="object" string="Send for Review" class="btn-warning" invisible="state != 'in_progress'"/>
                    <button name="action_complete" type="object" string="Complete Execution" class="btn-success" invisible="state != 'under_review'"/>
                    <button name="action_reset_draft" type="object" string="Reset to Draft" class="btn-secondary" invisible="state not in ['in_progress', 'under_review']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,under_review,completed" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="name" placeholder="Execution Reference..." class="col-6"/>
                        </h1>
                        <div class="text-muted">
                            <field name="client_id"/> • <field name="fiscal_year" readonly="1"/>
                        </div>
                    </div>

                    <div class="card bg-light border-0 shadow-sm mb-3">
                        <div class="card-body">
                            <div class="row text-center text-md-start gy-3">
                                <div class="col-md-3">
                                    <strong class="text-uppercase text-muted small">Overall Progress</strong>
                                    <field name="overall_progress" widget="progressbar" options="{'edit': False}" class="mt-1"/>
                                </div>
                                <div class="col-md-3">
                                    <strong class="text-uppercase text-muted small">Completed Heads</strong>
                                    <div class="h5 mt-1 mb-0">
                                        <field name="completed_heads_count"/> / <field name="total_heads_count"/>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <strong class="text-uppercase text-muted small">Current Status</strong>
                                    <field name="state" widget="badge" readonly="1" options="{'classes': {'draft': 'secondary', 'in_progress': 'warning', 'under_review': 'info', 'completed': 'success'}}" class="mt-1"/>
                                </div>
                                <div class="col-md-3">
                                    <strong class="text-uppercase text-muted small">Audit Lead</strong>
                                    <div class="h5 mt-1 mb-0">
                                        <field name="audit_lead_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <div class="border rounded-3 p-3 h-100 shadow-sm bg-white">
                                <div class="text-uppercase text-muted small">Step 1 · Engage</div>
                                <div class="h5 mt-2">Set the engagement context</div>
                                <p class="text-muted mb-0">Confirm client, dates and planning links before you select accounting heads.</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded-3 p-3 h-100 shadow-sm bg-white">
                                <div class="text-uppercase text-muted small">Step 2 · Prepare</div>
                                <div class="h5 mt-2">Select accounting heads</div>
                                <p class="text-muted mb-0">Pick the faces you will cover, tag risks and raise initial coverage targets.</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded-3 p-3 h-100 shadow-sm bg-white">
                                <div class="text-uppercase text-muted small">Step 3 · Execute</div>
                                <div class="h5 mt-2">Run tests &amp; capture evidence</div>
                                <p class="text-muted mb-0">Use the head details notebook to capture procedures, sampling, analytics and evidence.</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded-3 p-3 h-100 shadow-sm bg-white">
                                <div class="text-uppercase text-muted small">Step 4 · Close</div>
                                <div class="h5 mt-2">Review &amp; finalize</div>
                                <p class="text-muted mb-0">Lock heads when testing is complete and send the execution phase for review.</p>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-secondary" invisible="state != 'draft'" role="alert">
                        <strong>Draft:</strong> Select accounting heads and configure baseline risks before kickoff.
                    </div>
                    <div class="alert alert-warning" invisible="state != 'in_progress'" role="alert">
                        <strong>In Progress:</strong> Track coverage, risk responses, and evidence completion for each head.
                    </div>
                    <div class="alert alert-info" invisible="state != 'under_review'" role="alert">
                        <strong>Under Review:</strong> Heads are locked for reviewer sign-off; update outstanding notes.
                    </div>
                    <div class="alert alert-success" invisible="state != 'completed'" role="alert">
                        <strong>Completed:</strong> Execution artifacts are finalized and ready for finalisation.
                    </div>

                    <group string="Engagement Details">
                        <group>
                            <field name="client_id" widget="many2one" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="audit_lead_id"/>
                            <field name="fiscal_year" readonly="1"/>
                        </group>
                    </group>

                    <group string="Accounting Heads Selection" invisible="state != 'draft'">
                        <div class="alert alert-warning">
                            <strong>Tip:</strong> Use tags to highlight high-risk heads before confirming and generating execution detail lines.
                        </div>
                        <field name="selected_head_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}" placeholder="Select accounting heads..." class="col-12"/>
                    </group>

                    <group string="Head-wise Execution Details" invisible="state == 'draft'">
                        <div class="alert alert-success" invisible="state != 'completed'">
                            <strong>Execution Completed:</strong> All selected accounting heads have been processed.
                        </div>
                        <field name="head_details_ids" mode="tree,form" nolabel="1">
                            <tree decoration-success="state=='completed'" decoration-warning="state=='in_progress'" decoration-muted="state=='draft'" decoration-danger="significant_risk==True" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="significant_risk" invisible="1"/>
                                <field name="account_head_id"/>
                                <field name="nature" widget="badge" options="{'classes': {'revenue': 'success', 'expense': 'danger', 'asset': 'primary', 'liability': 'warning', 'equity': 'info'}}"/>
                                <field name="risk_rating" widget="badge" options="{'classes': {'low': 'success', 'medium': 'warning', 'high': 'danger', 'significant': 'danger'}}"/>
                                <field name="coverage_percentage" widget="progressbar" options="{'edit': False}"/>
                                <field name="tested_percentage" widget="progressbar" options="{'edit': False}"/>
                                <field name="fully_tested" widget="boolean_toggle"/>
                                <field name="state" widget="badge" options="{'classes': {'draft': 'secondary', 'in_progress': 'warning', 'under_review': 'info', 'completed': 'success'}}"/>
                                <field name="progress" widget="progressbar" options="{'edit': False}"/>
                                <button name="action_start_execution" type="object" string="Start" class="btn-sm btn-outline-warning" invisible="state != 'draft'"/>
                                <button name="action_complete_head" type="object" string="Complete" class="btn-sm btn-outline-success" invisible="state != 'in_progress'"/>
                                <button name="action_reset_head" type="object" string="Reset" class="btn-sm btn-outline-secondary" invisible="state == 'draft'"/>
                            </tree>
                            <form>
                                <sheet>
                                    <div class="oe_title mb-3">
                                        <h1>
                                            <field name="name"/>
                                        </h1>
                                        <div class="text-muted">
                                            <field name="account_head_id"/> • <field name="nature" readonly="1"/>
                                        </div>
                                    </div>
                                    <group>
                                        <group string="Account Snapshot">
                                            <field name="account_head_id"/>
                                            <field name="account_code" readonly="1"/>
                                            <field name="nature" readonly="1" widget="badge" options="{'classes': {'revenue': 'success', 'expense': 'danger', 'asset': 'primary', 'liability': 'warning', 'equity': 'info'}}"/>
                                            <field name="assertion_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True, 'no_create_edit': True}" placeholder="Tag relevant assertions"/>
                                        </group>
                                        <group string="Execution Status">
                                            <field name="state" widget="radio" options="{'horizontal': True}"/>
                                            <field name="progress" widget="progressbar" options="{'edit': False}"/>
                                            <field name="coverage_percentage" widget="progressbar" options="{'edit': False}"/>
                                            <field name="tested_percentage" widget="percentpie" options="{'edit': False}" readonly="1"/>
                                            <field name="fully_tested" widget="boolean_button"/>
                                        </group>
                                    </group>
                                    <group string="Risk Overview">
                                        <group>
                                            <field name="risk_nature"/>
                                            <field name="risk_rating"/>
                                            <field name="significant_risk"/>
                                            <field name="overall_risk_assessment" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="inherent_risk"/>
                                            <field name="control_risk"/>
                                            <field name="detection_risk"/>
                                            <field name="risk_strength"/>
                                        </group>
                                    </group>
                                    <group string="Narrative &amp; Controls">
                                        <group>
                                            <field name="risk_description" nolabel="1" placeholder="Summarize the key risk drivers for this head..."/>
                                        </group>
                                        <group string="Control Reliance">
                                            <field name="relying_on_controls"/>
                                            <field name="control_design_effective" invisible="not relying_on_controls"/>
                                            <field name="control_operating_effective" invisible="not relying_on_controls"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Overview &amp; Lead Schedule">
                                            <group>
                                                <group string="Financial Information">
                                                    <field name="current_year_amount"/>
                                                    <field name="previous_year_amount"/>
                                                    <field name="variance_amount" readonly="1"/>
                                                    <field name="variance_percentage" readonly="1"/>
                                                </group>
                                                <group string="Progress Metrics">
                                                    <field name="population_amount"/>
                                                    <field name="sample_amount_tested"/>
                                                    <field name="tolerable_error"/>
                                                    <field name="confidence_level"/>
                                                </group>
                                            </group>
                                        </page>
                                        <page string="Population &amp; Sampling">
                                            <group>
                                                <group string="Sampling Details">
                                                    <field name="population_size"/>
                                                    <field name="sample_size"/>
                                                    <field name="sampling_method"/>
                                                </group>
                                                <group string="Coverage">
                                                    <field name="coverage_percentage" readonly="1"/>
                                                    <field name="tested_percentage" readonly="1"/>
                                                    <field name="fully_tested" readonly="1"/>
                                                </group>
                                            </group>
                                        </page>
                                        <page string="Risk Assessment">
                                            <group>
                                                <group string="Risk Levels">
                                                    <field name="risk_nature"/>
                                                    <field name="risk_rating"/>
                                                    <field name="significant_risk"/>
                                                </group>
                                                <group string="Component Risks">
                                                    <field name="inherent_risk"/>
                                                    <field name="control_risk"/>
                                                    <field name="detection_risk"/>
                                                </group>
                                            </group>
                                            <group>
                                                <group>
                                                    <field name="risk_strength"/>
                                                    <field name="overall_risk_assessment" readonly="1"/>
                                                </group>
                                                <group string="Control Reliance">
                                                    <field name="relying_on_controls"/>
                                                    <field name="control_design_effective" invisible="not relying_on_controls"/>
                                                    <field name="control_operating_effective" invisible="not relying_on_controls"/>
                                                </group>
                                            </group>
                                        </page>
                                        <page string="Audit Procedures">
                                            <field name="audit_procedure_ids" nolabel="1">
                                                <tree decoration-success="is_completed==True" decoration-muted="is_completed==False" editable="bottom">
                                                    <field name="sequence" widget="handle"/>
                                                    <field name="procedure_name"/>
                                                    <field name="procedure_type" widget="badge" options="{'classes': {'risk_assessment': 'warning', 'test_of_controls': 'info', 'substantive': 'primary', 'analytical': 'success'}}"/>
                                                    <field name="risk_level" widget="badge" options="{'classes': {'low': 'success', 'medium': 'warning', 'high': 'danger'}}"/>
                                                    <field name="is_completed" widget="boolean_toggle"/>
                                                    <field name="performed_by"/>
                                                    <field name="performed_date"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="procedure_name"/>
                                                            <field name="procedure_type"/>
                                                            <field name="risk_level"/>
                                                        </group>
                                                        <group>
                                                            <field name="is_completed"/>
                                                            <field name="performed_by"/>
                                                            <field name="performed_date"/>
                                                        </group>
                                                    </group>
                                                    <field name="procedure_description" nolabel="1"/>
                                                    <field name="notes"/>
                                                </form>
                                            </field>
                                        </page>
                                        <page string="Test of Details">
                                            <field name="test_of_details_ids" nolabel="1">
                                                <tree decoration-success="test_result=='satisfactory'" decoration-danger="test_result=='unsatisfactory'" decoration-warning="test_result=='qualified'" editable="bottom">
                                                    <field name="test_objective"/>
                                                    <field name="assertion_tested"/>
                                                    <field name="test_method"/>
                                                    <field name="sample_items_tested"/>
                                                    <field name="exceptions_found"/>
                                                    <field name="test_result" widget="badge" options="{'classes': {'satisfactory': 'success', 'unsatisfactory': 'danger', 'qualified': 'warning'}}"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="test_objective"/>
                                                            <field name="assertion_tested"/>
                                                            <field name="test_method"/>
                                                        </group>
                                                        <group>
                                                            <field name="sample_items_tested"/>
                                                            <field name="exceptions_found"/>
                                                            <field name="test_result"/>
                                                        </group>
                                                    </group>
                                                    <field name="test_details" nolabel="1"/>
                                                    <field name="conclusion"/>
                                                </form>
                                            </field>
                                        </page>
                                        <page string="Test of Controls">
                                            <field name="test_of_controls_ids" nolabel="1">
                                                <tree decoration-success="control_effectiveness=='effective'" decoration-warning="control_effectiveness=='partially_effective'" decoration-danger="control_effectiveness=='ineffective'" editable="bottom">
                                                    <field name="control_objective"/>
                                                    <field name="control_activity"/>
                                                    <field name="frequency"/>
                                                    <field name="samples_tested"/>
                                                    <field name="deviations"/>
                                                    <field name="control_effectiveness" widget="badge" options="{'classes': {'effective': 'success', 'partially_effective': 'warning', 'ineffective': 'danger'}}"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="control_objective"/>
                                                            <field name="control_activity"/>
                                                            <field name="frequency"/>
                                                        </group>
                                                        <group>
                                                            <field name="samples_tested"/>
                                                            <field name="deviations"/>
                                                            <field name="control_effectiveness"/>
                                                        </group>
                                                    </group>
                                                    <field name="control_testing_details" nolabel="1"/>
                                                    <field name="control_conclusion"/>
                                                </form>
                                            </field>
                                        </page>
                                        <page string="Analytical Procedures">
                                            <field name="analytical_procedure_ids" nolabel="1">
                                                <tree editable="bottom" decoration-danger="unusual_fluctuation==True" decoration-warning="investigation_required==True">
                                                    <field name="sequence" widget="handle"/>
                                                    <field name="unusual_fluctuation" invisible="1"/>
                                                    <field name="investigation_required" invisible="1"/>
                                                    <field name="procedure_description"/>
                                                    <field name="procedure_type" widget="badge" options="{'classes': {'ratio': 'primary', 'trend': 'success', 'comparison': 'warning', 'reasonableness': 'info'}}"/>
                                                    <field name="current_year_amount"/>
                                                    <field name="previous_year_amount"/>
                                                    <field name="variance_percentage" widget="percentpie"/>
                                                    <field name="expectation_met" widget="boolean_toggle"/>
                                                    <field name="investigation_required" widget="boolean_toggle"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="procedure_description"/>
                                                            <field name="procedure_type"/>
                                                        </group>
                                                        <group string="Financial Inputs">
                                                            <field name="current_year_amount"/>
                                                            <field name="previous_year_amount"/>
                                                            <field name="budget_amount"/>
                                                            <field name="industry_average"/>
                                                        </group>
                                                    </group>
                                                    <group string="Variance Analysis">
                                                        <field name="variance_cy_py" readonly="1"/>
                                                        <field name="variance_cy_budget" readonly="1"/>
                                                        <field name="variance_percentage" readonly="1"/>
                                                    </group>
                                                    <group string="Conclusions">
                                                        <field name="expectation_met"/>
                                                        <field name="unusual_fluctuation"/>
                                                        <field name="investigation_required"/>
                                                    </group>
                                                    <group>
                                                        <field name="analysis_notes" nolabel="1"/>
                                                        <field name="follow_up_actions" nolabel="1"/>
                                                    </group>
                                                </form>
                                            </field>
                                        </page>
                                        <page string="Evidence Collection">
                                            <field name="evidence_ids" nolabel="1">
                                                <tree decoration-success="reliability=='high'" decoration-warning="reliability=='medium'" decoration-danger="reliability=='low'" editable="bottom">
                                                    <field name="evidence_type"/>
                                                    <field name="description"/>
                                                    <field name="reliability" widget="badge" options="{'classes': {'high': 'success', 'medium': 'warning', 'low': 'danger'}}"/>
                                                    <field name="collected_by"/>
                                                    <field name="collection_date"/>
                                                    <field name="attachment_id" string="Attachment"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="evidence_type"/>
                                                            <field name="reliability"/>
                                                            <field name="collected_by"/>
                                                            <field name="collection_date"/>
                                                        </group>
                                                        <group>
                                                            <field name="attachment_id"/>
                                                        </group>
                                                    </group>
                                                    <field name="description"/>
                                                    <field name="evidence_notes"/>
                                                </form>
                                            </field>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_simple_execution_phase_search" model="ir.ui.view">
        <field name="name">execution.phase.search</field>
        <field name="model">execution.phase</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="client_id"/>
                <field name="state"/>
                <field name="audit_lead_id"/>
                <field name="date_start"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="filter_in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Under Review" name="filter_under_review" domain="[('state', '=', 'under_review')]"/>
                <filter string="Completed" name="filter_completed" domain="[('state', '=', 'completed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_by_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Audit Lead" name="group_by_lead" context="{'group_by': 'audit_lead_id'}"/>
                    <filter string="Fiscal Year" name="group_by_year" context="{'group_by': 'fiscal_year'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_simple_execution_phase" model="ir.actions.act_window">
        <field name="name">Audit Execution Phase</field>
        <field name="res_model">execution.phase</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_simple_execution_phase_tree"/>
        <field name="search_view_id" ref="view_simple_execution_phase_search"/>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new audit execution phase to begin the audit procedures.
            </p>
            <p>
                Start by selecting the client and accounting heads you want to audit.
            </p>
        </field>
    </record>

    <menuitem id="menu_simple_execution_phase" name="Audit Execution" parent="qaco_audit.menu_qaco_audit_main" action="action_simple_execution_phase" sequence="30"/>
</odoo>
