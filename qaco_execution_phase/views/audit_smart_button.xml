<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Smart button on qaco.audit form -->
    <record id="view_qaco_audit_form_execution_button" model="ir.ui.view">
        <field name="name">qaco.audit.form.execution.button</field>
        <field name="model">qaco.audit</field>
        <field name="inherit_id" ref="qaco_planning_phase.view_qaco_audit_form_planning_button"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action"
                        name="%(qaco_execution_phase.action_open_execution_phase_from_audit)d"
                        icon="fa-tasks">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Execution</span>
                        <span class="o_stat_text">Phase</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
