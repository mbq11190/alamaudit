<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_audit_execution_tree" model="ir.ui.view">
        <field name="name">audit.execution.tree</field>
        <field name="model">audit.execution</field>
        <field name="arch" type="xml">
            <tree create="1" edit="1" delete="1" decoration-success="state=='completed'" decoration-warning="state=='in_progress'" decoration-muted="state=='draft'" decoration-info="state=='under_review'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="client_id"/>
                <field name="account_head_id"/>
                <field name="nature" widget="badge" options="{'classes': {'revenue': 'success', 'expense': 'danger', 'asset': 'primary', 'liability': 'warning', 'equity': 'info'}}"/>
                <field name="risk_rating" widget="badge" options="{'classes': {'low': 'success', 'medium': 'warning', 'high': 'danger', 'significant': 'danger'}}"/>
                <field name="significant_risk" widget="boolean_button" options="{'terminology': 'significant'}"/>
                <field name="coverage_percentage" widget="progressbar" options="{'edit': False}"/>
                <field name="overall_progress" widget="progressbar" options="{'edit': False}"/>
                <field name="state" widget="badge" options="{'classes': {'draft': 'secondary', 'in_progress': 'warning', 'under_review': 'info', 'completed': 'success'}}"/>
            </tree>
        </field>
    </record>

    <record id="view_audit_execution_form" model="ir.ui.view">
        <field name="name">audit.execution.form</field>
        <field name="model">audit.execution</field>
        <field name="arch" type="xml">
            <form string="Audit Execution">
                <header>
                    <button name="action_start_execution" type="object" string="Start Execution" class="btn-warning" invisible="state != 'draft' or not assertion_ids"/>
                    <button name="action_mark_review" type="object" string="Send for Review" class="btn-info" invisible="state != 'in_progress'"/>
                    <button name="action_complete_execution" type="object" string="Complete Execution" class="btn-success" invisible="state != 'under_review'"/>
                    <button name="action_reset_draft" type="object" string="Reset to Draft" class="btn-secondary" invisible="state not in ['in_progress', 'under_review']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,under_review,completed" clickable="True"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Execution Reference..." class="col-6"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="client_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="audit_lead_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="fiscal_year" readonly="1"/>
                            <field name="state" widget="radio" options="{'horizontal': True}"/>
                        </group>
                    </group>

                    <div class="alert alert-secondary" invisible="state != 'draft'" role="alert">
                        <strong>Draft:</strong> Configure assertions and account information before starting execution.
                    </div>
                    <div class="alert alert-warning" invisible="state != 'in_progress'" role="alert">
                        <strong>In Progress:</strong> Procedures are underway. Keep progress metrics updated.
                    </div>
                    <div class="alert alert-info" invisible="state != 'under_review'" role="alert">
                        <strong>Under Review:</strong> Awaiting review confirmation prior to completion.
                    </div>
                    <div class="alert alert-success" invisible="state != 'completed'" role="alert">
                        <strong>Completed:</strong> Audit execution finalized and locked.
                    </div>

                    <group string="Account &amp; Risk Assessment">
                        <group string="Account Details">
                            <field name="account_head_id" options="{'no_create': True, 'no_create_edit': True}" placeholder="Select Head of Account..." class="col-12"/>
                            <field name="account_code" readonly="1"/>
                            <field name="nature" widget="radio" options="{'horizontal': True}" readonly="1"/>
                        </group>
                        <group string="Risk Assessment">
                            <field name="risk_rating" widget="radio" options="{'horizontal': True}"/>
                            <field name="significant_risk" widget="boolean_button" options="{'terminology': 'significant'}"/>
                            <field name="relying_on_controls" widget="boolean_button" options="{'terminology': 'relying'}"/>
                        </group>
                    </group>

                    <group string="Assertions">
                        <field name="assertion_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True, 'no_create_edit': True}" placeholder="Select multiple assertions..." class="col-12"/>
                    </group>

                    <group string="Risk Description">
                        <field name="risk_description" nolabel="1"/>
                    </group>

                    <group string="Control Reliance &amp; Financial Information">
                        <group string="Control Reliance">
                            <field name="control_design_effective" widget="boolean_button" invisible="not relying_on_controls"/>
                            <field name="control_operating_effective" widget="boolean_button" invisible="not relying_on_controls"/>
                        </group>
                        <group string="Financial Information">
                            <field name="total_population_amount"/>
                            <field name="tested_amount"/>
                            <field name="tested_percentage" widget="progressbar" options="{'edit': False}"/>
                            <field name="coverage_percentage" widget="progressbar" options="{'edit': False}"/>
                            <field name="fully_tested" widget="boolean_button" options="{'terminology': 'fully_tested'}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Audit Procedures">
                            <div class="alert alert-info">
                                <strong>Procedure Selection:</strong> Add procedures from predefined templates and customize as needed.
                            </div>
                            <field name="audit_procedure_ids" nolabel="1">
                                <tree editable="bottom" decoration-success="is_completed==True" decoration-muted="is_completed==False">
                                    <field name="sequence" widget="handle"/>
                                    <field name="procedure_template_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="procedure_type" widget="badge" options="{'classes': {'risk_assessment': 'warning', 'test_of_controls': 'info', 'substantive': 'primary', 'analytical': 'success'}}"/>
                                    <field name="risk_level" widget="badge" options="{'classes': {'low': 'success', 'medium': 'warning', 'high': 'danger'}}"/>
                                    <field name="is_completed" widget="boolean_toggle"/>
                                    <field name="performed_by"/>
                                    <field name="performed_date"/>
                                    <field name="result" widget="badge" options="{'classes': {'satisfactory': 'success', 'unsatisfactory': 'danger', 'not_applicable': 'secondary'}}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <div class="oe_title">
                                            <h2>
                                                <field name="procedure_template_id" options="{'no_create': True, 'no_create_edit': True}" placeholder="Select Procedure..." class="col-8"/>
                                            </h2>
                                        </div>
                                        <group>
                                            <group>
                                                <field name="procedure_name" readonly="1"/>
                                                <field name="procedure_type" readonly="1"/>
                                                <field name="risk_level"/>
                                            </group>
                                            <group>
                                                <field name="is_completed" widget="boolean_button"/>
                                                <field name="performed_by"/>
                                                <field name="performed_date"/>
                                                <field name="result"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="procedure_description" nolabel="1" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="custom_description" nolabel="1"/>
                                        </group>
                                        <group string="Findings &amp; Notes">
                                            <field name="findings" nolabel="1" placeholder="Enter findings and observations..."/>
                                            <field name="notes" nolabel="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Test of Controls" invisible="not relying_on_controls">
                            <field name="test_of_controls_ids" nolabel="1">
                                <tree editable="bottom" decoration-success="test_result=='effective'" decoration-warning="test_result=='partially_effective'" decoration-danger="test_result=='ineffective'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="control_objective"/>
                                    <field name="control_activity"/>
                                    <field name="frequency" widget="badge" options="{'classes': {'daily': 'info', 'weekly': 'primary', 'monthly': 'warning', 'quarterly': 'success', 'annually': 'secondary'}}"/>
                                    <field name="sample_size"/>
                                    <field name="exceptions_found"/>
                                    <field name="deviation_rate" widget="progressbar" options="{'edit': False}"/>
                                    <field name="test_result" widget="badge" options="{'classes': {'effective': 'success', 'partially_effective': 'warning', 'ineffective': 'danger'}}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group string="Control Information">
                                                <field name="control_objective"/>
                                                <field name="control_activity" nolabel="1"/>
                                                <field name="control_owner"/>
                                                <field name="frequency"/>
                                            </group>
                                            <group string="Testing Details">
                                                <field name="sample_size"/>
                                                <field name="sample_method"/>
                                                <field name="exceptions_found"/>
                                                <field name="deviation_rate" widget="progressbar" options="{'edit': False}"/>
                                            </group>
                                        </group>
                                        <group string="Results">
                                            <field name="control_effective" widget="boolean_button"/>
                                            <field name="test_result"/>
                                        </group>
                                        <group>
                                            <field name="notes" nolabel="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Test of Details">
                            <field name="test_of_details_ids" nolabel="1">
                                <tree editable="bottom" decoration-success="test_result=='satisfactory'" decoration-danger="test_result=='unsatisfactory'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="test_objective"/>
                                    <field name="assertion_tested" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True, 'no_create_edit': True}"/>
                                    <field name="population_size"/>
                                    <field name="sample_size"/>
                                    <field name="population_amount"/>
                                    <field name="sample_amount"/>
                                    <field name="coverage_percentage" widget="progressbar" options="{'edit': False}"/>
                                    <field name="exceptions_found"/>
                                    <field name="test_result" widget="badge" options="{'classes': {'satisfactory': 'success', 'unsatisfactory': 'danger'}}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="test_objective"/>
                                                <field name="assertion_tested" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True, 'no_create_edit': True}"/>
                                            </group>
                                            <group>
                                                <field name="sampling_method"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group string="Sampling">
                                                <field name="population_size"/>
                                                <field name="sample_size"/>
                                            </group>
                                            <group string="Amounts">
                                                <field name="population_amount"/>
                                                <field name="sample_amount"/>
                                                <field name="coverage_percentage" widget="progressbar" options="{'edit': False}"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group string="Results">
                                                <field name="exceptions_found"/>
                                                <field name="test_result"/>
                                            </group>
                                            <group string="Conclusion">
                                                <field name="conclusion" nolabel="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <div class="alert alert-success mt-3" role="alert">
                                <h4 class="alert-heading">Testing Summary</h4>
                                <div class="row text-center mt-2">
                                    <div class="col-md-4">
                                        <strong>Total Population Amount</strong>
                                        <div class="h4 text-primary">
                                            <field name="total_population_amount" readonly="1"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Tested Amount</strong>
                                        <div class="h4 text-success">
                                            <field name="tested_amount" readonly="1"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Tested Percentage</strong>
                                        <div class="h4 text-warning">
                                            <field name="tested_percentage" widget="percentpie" readonly="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>

                        <page string="Analytical Procedures">
                            <field name="analytical_procedure_ids" nolabel="1">
                                <tree editable="bottom" decoration-success="expectation_met==True" decoration-warning="investigation_required==True" decoration-danger="unusual_fluctuation==True">
                                    <field name="sequence" widget="handle"/>
                                    <field name="unusual_fluctuation" invisible="1"/>
                                    <field name="procedure_description"/>
                                    <field name="procedure_type" widget="badge" options="{'classes': {'ratio': 'primary', 'trend': 'success', 'comparison': 'warning', 'reasonableness': 'info'}}"/>
                                    <field name="current_year_amount"/>
                                    <field name="previous_year_amount"/>
                                    <field name="variance_percentage" widget="percentpie"/>
                                    <field name="expectation_met" widget="boolean_button"/>
                                    <field name="investigation_required" widget="boolean_button"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="procedure_description"/>
                                                <field name="procedure_type"/>
                                            </group>
                                            <group string="Financial Data">
                                                <field name="current_year_amount"/>
                                                <field name="previous_year_amount"/>
                                                <field name="budget_amount"/>
                                                <field name="industry_average"/>
                                            </group>
                                        </group>
                                        <group string="Variance Analysis">
                                            <field name="variance_cy_py" readonly="1"/>
                                            <field name="variance_cy_budget" readonly="1"/>
                                            <field name="variance_percentage" readonly="1"/>
                                        </group>
                                        <group string="Results">
                                            <field name="expectation_met" widget="boolean_button"/>
                                            <field name="unusual_fluctuation" widget="boolean_button"/>
                                            <field name="investigation_required" widget="boolean_button"/>
                                        </group>
                                        <group string="Analysis &amp; Follow-up">
                                            <field name="analysis_notes" nolabel="1"/>
                                            <field name="follow_up_actions" nolabel="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Evidence Collection">
                            <field name="evidence_ids" nolabel="1">
                                <tree editable="bottom" decoration-success="reliability=='high'" decoration-warning="reliability=='medium'" decoration-danger="reliability=='low'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="evidence_type"/>
                                    <field name="description"/>
                                    <field name="reliability" widget="badge" options="{'classes': {'high': 'success', 'medium': 'warning', 'low': 'danger'}}"/>
                                    <field name="collected_by"/>
                                    <field name="collection_date"/>
                                    <field name="attachment_id" filename="name" string="Attachment"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="evidence_type"/>
                                                <field name="reliability"/>
                                                <field name="collected_by"/>
                                                <field name="collection_date"/>
                                            </group>
                                            <group>
                                                <field name="attachment_id" filename="name"/>
                                            </group>
                                        </group>
                                        <field name="description"/>
                                        <field name="evidence_notes"/>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_audit_execution_search" model="ir.ui.view">
        <field name="name">audit.execution.search</field>
        <field name="model">audit.execution</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="client_id"/>
                <field name="account_head_id"/>
                <field name="nature"/>
                <field name="risk_rating"/>
                <field name="audit_lead_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Under Review" name="under_review" domain="[('state', '=', 'under_review')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Significant Risks" name="significant_risks" domain="[('significant_risk', '=', True)]"/>
                <filter string="Fully Tested" name="fully_tested" domain="[('fully_tested', '=', True)]"/>
                <filter string="Control Reliance" name="control_reliance" domain="[('relying_on_controls', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Nature" name="group_by_nature" context="{'group_by': 'nature'}"/>
                    <filter string="Risk Rating" name="group_by_risk" context="{'group_by': 'risk_rating'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Client" name="group_by_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Audit Lead" name="group_by_lead" context="{'group_by': 'audit_lead_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_audit_execution" model="ir.actions.act_window">
        <field name="name">Audit Execution Dashboard</field>
        <field name="res_model">audit.execution</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_audit_execution_tree"/>
        <field name="search_view_id" ref="view_audit_execution_search"/>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <div class="text-center">
                    <h3>Welcome to the Audit Execution Dashboard</h3>
                    <p>Create a new audit execution to begin comprehensive audit procedures.</p>
                </div>
            </p>
        </field>
    </record>

    <menuitem id="menu_audit_execution" name="Audit Execution Dashboard" parent="qaco_audit.menu_qaco_audit_main" action="action_audit_execution" sequence="25"/>
</odoo>
