<odoo>
    <data noupdate="0">
        <record id="ir_cron_create_audit_quarters" model="ir.cron">
            <field name="name">Create Next Two Audit Quarters</field>
            <field name="model_id" ref="model_audit_quarter"/>
            <field name="code">model.create_next_two_quarters()</field>
            <field name="interval_number">3</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1, months=3)).strftime('%Y-%m-%d 00:00:00')"/>
        </record>
        <record id="ir_cron_delete_empty_audit_quarters" model="ir.cron">
            <field name="name">Delete Empty Audit Quarters</field>
            <field name="model_id" ref="model_audit_quarter"/>
            <field name="state">code</field>
            <field name="code">model.delete_empty_quarters()</field>
            <field name="interval_number">3</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1, months=3)).strftime('%Y-%m-%d 00:00:00')"/>
        </record>
    </data>
</odoo>
