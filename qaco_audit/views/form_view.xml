<odoo>
  <data>
      <!-- Form view definition -->
        <record model="ir.ui.view" id="qaco_audit_form">
            <field name="name">audit Form</field>
            <field name="model">qaco.audit</field>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="move_to_previous_stage" string="Previous Stage" type="object" class="oe_highlight"/>
                        <button name="move_to_next_stage" string="Next Stage" type="object" class="oe_highlight"/>
                        <field name="stage_id" widget="statusbar_duration" options="{'clickable': '0', 'fold_field': 'is_folded_in_kanban'}"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box" data-smart-button-limit="8">
                            <!-- Session 6A: Planning Dashboard Smart Button -->
                            <button name="action_open_planning_dashboard" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-dashboard">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Planning</span>
                                    <span class="o_stat_text">Dashboard</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                     <div>
                        <div class="oe_title pe-0">
                            <h1 class="d-flex justify-content-between align-items-center">
                                <div class="d-flex w-100">
                                    <field name="client_id" options="{'line_breaks': False}" class="o_task_name text-truncate w-md-75 w-100 pe-2" placeholder="Select The Client Name in Below Field" readonly="True"/>
                                </div>
                                <div class="d-flex justify-content-end o_state_container">
                                    <div class="me-3">
                                        <field name="engagement_code" readonly="1"/>
                                    </div>
                                    <div>
                                        <field name="engagement_status" readonly="1"/>
                                    </div>
                                </div>
                            </h1>
                        </div>
                    </div>
                    <br/>
                        <!-- Add the fields you want to display in the form view -->
                        <group col="3">
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="client_id" force_save="1"/>
                                <field name="contact" widget="phone"/>
                                <field name="audit_year" options="{'no_create': True}" widget = "many2many_tags"/>
                            </group>
                            <group>
<!--                                <field name="partner"/>-->
                                <field name="qaco_assigning_partner" options="{'no_create': True}" string="Assigning Partner"/>
                                <field name="firm_name" options="{'no_create': True, 'no_open': True}"/>
                                <field name="priority" widget="priority"/>
<!--                                <field name="repeat"/>-->
                                <field name="team_id" options="{'no_create': True}" widget = "many2many_tags_avatar"/>
                                <field name="qaco_audit_partner" options="{'no_create': True}"/>
<!--                                <field name="client_signature" string="Client Sign"/>-->
                            </group>
                            <group>
                                <field name="referral"/>
<!--                                <field name="date_deadline"/>-->
                                <field name="report_type"/>
<!--                                <field name="no_of_persons"/>-->
                                <field name="folder" widget="CopyClipboardChar"/>
                                <field name="employee_id" widget="many2one_avatar_employee"/>
                                <field name="udin_no"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="section_00" string="0.0 - Engagement Master">
                                <group>
                                    <group>
                                        <field name="engagement_code" readonly="1"/>
                                        <field name="engagement_type"/>
                                        <field name="reporting_framework"/>
                                        <field name="auditing_standard_ids" widget="many2many_tags"/>
                                    </group>
                                    <group>
                                        <field name="regulator_ids" widget="many2many_tags"/>
                                        <field name="engagement_status"/>
                                        <field name="lock_reason" readonly="1"/>
                                        <field name="locked_on" readonly="1"/>
                                    </group>
                                </group>
                                <group>
                                    <label string="Roles &amp; Segregation of Duties" class="o_form_label"/>
                                    <group col="3">
                                        <field name="preparer_id"/>
                                        <field name="reviewer_id"/>
                                        <field name="engagement_partner_user_id"/>
                                        <field name="eqcr_partner_user_id"/>
                                        <field name="quality_partner_user_id"/>
                                        <field name="managing_partner_user_id"/>
                                    </group>
                                </group>
                                <group>
                                    <button name="action_set_status_prepared" type="object" string="Set Prepared" class="btn-secondary"/>
                                    <button name="action_set_status_reviewed" type="object" string="Set Reviewed" class="btn-secondary ms-2"/>
                                    <button name="action_partner_approve" type="object" string="Partner Approve" class="btn-primary ms-2"/>
                                    <button name="action_lock_engagement" type="object" string="Lock Engagement" class="btn-success ms-2"/>
                                </group>
                                <group string="Change Log">
                                    <field name="message_ids" widget="mail_thread"/>
                                </group>
                            </page>
                             <page name="description_page" string="Instructions">
                                <field name="description" type="html" options="{'collaborative': true, 'allowCommandImage': false, 'allowCommandVideo': false, 'allowCommandFile': false}"/>
                              </page>
<!--                              <page name="documents_checklist" string="Documents Checklist" >#invisible="stage_id in [1,2]">-->
<!--                                <group col="2">-->
<!--                                        <group>-->
<!--                                            <field name="documents" string="Documents" widget="radio" autofocus="context.get('stage_id', False) == 3"/>-->
<!--                                            <field name="scanned" string="Data Scan Status" widget="radio"/>-->
<!--                                        </group>-->
<!--                                        <group>-->
<!--                                            <field name="original_file" string="Original Documents" widget="radio"/>-->
<!--                                            <field name="documents_info"/>-->
<!--                                        </group>-->
<!--                                </group>-->
<!--                              </page>-->

<!--                            <page name="File Attachments" string="File Attachments"> #invisible="stage_id in [1,2]">-->
<!--                                    <group>-->
<!--                                        <field name="file_attachments" string="" view_mode="tree"/>-->
<!--                                    </group>-->
<!--                            </page>-->

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                         <field name="activity_ids"/>
                         <field name="message_follower_ids"/>
                         <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
  </data>
</odoo>