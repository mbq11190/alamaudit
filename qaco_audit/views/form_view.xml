<odoo>
  <data>
      <!-- Form view definition -->
        <record model="ir.ui.view" id="qaco_audit_form">
            <field name="name">audit Form</field>
            <field name="model">qaco.audit</field>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="move_to_previous_stage" string="Previous Stage" type="object" class="oe_highlight"/>
                        <button name="move_to_next_stage" string="Next Stage" type="object" class="oe_highlight"/>
                        <field name="stage_id" widget="statusbar_duration" options="{'clickable': '0', 'fold_field': 'is_folded_in_kanban'}"/>
                    </header>
                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" type="object" name="get_tax"
                                icon="fa-money">
                                <field string="Income Tax" name="tax_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_wht"
                                icon="fa-cube">
                                <field string="WHT" name="wht_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_salestax"
                                icon="fa-bolt">
                                <field string="Sales Tax" name="salestax_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_audit"
                                icon="fa-check-square-o">
                                <field string="Audit" name="audit_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_asecp"
                                icon="fa-calendar-check-o">
                                <field string="Annual SECP" name="asecp_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_corporate"
                                icon="fa-vcard-o">
                                <field string="Corporate" name="corporate_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_litigation"
                                icon="fa-linux">
                                <field string="Litigation" name="litigation_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_misc"
                                icon="fa-certificate">
                                <field string="Misc" name="misc_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_eobi"
                                icon="fa-google-wallet">
                                <field string="EOBI" name="eobi_count" widget="statinfo"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                     <div>
                        <div class="oe_title pe-0">
                            <h1 class="d-flex justify-content-between align-items-center">
                                <div class="d-flex w-100">
                                    <field name="client_id" options="{'line_breaks': False}" class="o_task_name text-truncate w-md-75 w-100 pe-2" placeholder="Select The Client Name in Below Field" readonly="True"/>
                                </div>
                                <div class="d-flex justify-content-end o_state_container">
                                </div>
                            </h1>
                        </div>
                    </div>
                    <br/>
                        <!-- Add the fields you want to display in the form view -->
                        <group col="3">
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="client_id" force_save="1" readonly="stage_id not in [1]"/>
                                <field name="contact" widget="phone"/>
                                <field name="audit_year" options="{'no_create': True}" readonly="stage_id not in [1]"  widget = "many2many_tags"/>
                                <field name="audit_location_1" readonly="stage_id not in [1]"/>
                                <field name="legal_entity" readonly="stage_id not in [3]" invisible="stage_id in [1,2]"/>
                            </group>
                            <group>
<!--                                <field name="partner" readonly="stage_id not in [1]"/>-->
                                <field name="qaco_assigning_partner" options="{'no_create': True}" string="Assigning Partner" readonly="stage_id not in [1]"/>
<!--                                <field name="firm_name" options="{'no_create': True, 'no_open': True}" readonly="stage_id not in [1]"/>-->
                                <field name="priority" widget="priority"/>
<!--                                <field name="repeat" readonly="stage_id not in [1]"/>-->
                                <field name="audit_location_2" widget="CopyClipboardChar" invisible="audit_location_1 != 'Client Premises'"/>
                                <field name="team_id" options="{'no_create': True}" readonly="stage_id not in [2]" invisible="stage_id in [1]" widget = "many2many_tags_avatar"/>
                                <field name="qaco_audit_partner" options="{'no_create': True}" readonly="stage_id not in [3]" invisible="stage_id in [1,2]"/>
<!--                                <field name="client_signature" string="Client Sign" readonly="stage_id not in [3]" invisible="stage_id in [1,2]"/>-->
                            </group>
                            <group>
                                <field name="referral" readonly="stage_id not in [1]"/>
<!--                                <field name="date_deadline"/>-->
                                <field name="report_type" readonly="stage_id not in [1]"/>
<!--                                <field name="no_of_persons" readonly="stage_id not in [1]"/>-->
                                <field name="folder" widget="CopyClipboardChar" readonly="stage_id not in [3]" invisible="stage_id in [1,2]"/>
                                <field name="employee_id" widget="many2one_avatar_employee" readonly="stage_id not in [2]" invisible="stage_id in [1]"/>
                                <field name="udin_no" invisible="stage_id in [1,2]" readonly="stage_id not in [3]"/>
                            </group>
                        </group>
                        <notebook>
                             <page name="description_page" string="Instructions">
                                <field name="description" type="html" options="{'collaborative': true, 'allowCommandImage': false, 'allowCommandVideo': false, 'allowCommandFile': false}"/>
                              </page>
<!--                              <page name="documents_checklist" string="Documents Checklist" >#invisible="stage_id in [1,2]">-->
<!--                                <group col="2">-->
<!--                                        <group>-->
<!--                                            <field name="documents" string="Documents" widget="radio" autofocus="context.get('stage_id', False) == 3"/>-->
<!--                                            <field name="scanned" string="Data Scan Status" widget="radio"/>-->
<!--                                        </group>-->
<!--                                        <group>-->
<!--                                            <field name="original_file" string="Original Documents" widget="radio"/>-->
<!--                                            <field name="documents_info"/>-->
<!--                                        </group>-->
<!--                                </group>-->
<!--                              </page>-->

<!--                            <page name="File Attachments" string="File Attachments"> #invisible="stage_id in [1,2]">-->
<!--                                    <group>-->
<!--                                        <field name="file_attachments" string="" view_mode="tree"/>-->
<!--                                    </group>-->
<!--                            </page>-->

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                         <field name="activity_ids"/>
                         <field name="message_follower_ids"/>
                         <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
  </data>
</odoo>