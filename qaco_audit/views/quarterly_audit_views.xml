<odoo>
    <data>
        <!-- Tree view -->
        <record id="view_qaco_quarterly_audit_tree" model="ir.ui.view">
            <field name="name">qaco.quarterly.audit.tree</field>
            <field name="model">qaco.quarterly.audit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="seq_code" optional="show"/>
                    <field name="client_id" optional="show"/>
                    <field name="work_quarter" optional="show"/>
                    <field name="stage_id" optional="show"/>
                    <field name="employee_id" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_qaco_quarterly_audit_form" model="ir.ui.view">
            <field name="name">qaco.quarterly.audit.form</field>
            <field name="model">qaco.quarterly.audit</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="move_to_previous_stage" string="Previous Stage" type="object" class="oe_highlight"/>
                        <button name="move_to_next_stage" string="Next Stage" type="object" class="oe_highlight"/>
                        <field name="stage_id" widget="statusbar_duration" options="{'clickable': '0', 'fold_field': 'is_folded_in_kanban'}"/>
                    </header>
                    <sheet>
                        <div name="button_box"/>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                        <div>
                            <div class="oe_title pe-0">
                                <h1 class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex w-100">
                                        <field name="client_id" options="{'line_breaks': False}"
                                               class="o_task_name text-truncate w-md-75 w-100 pe-2"
                                               placeholder="Select The Client Name in Below Field"
                                               readonly="True"/>
                                    </div>
                                    <div class="d-flex justify-content-end o_state_container"/>
                                </h1>
                            </div>
                        </div>
                        <br/>
                        <group col="3">
                            <field name="stage_name" invisible="1"/>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="client_id" force_save="1"/>
                                <field name="contact" widget="phone"/>
                                <field name="employee_id" widget="many2one_avatar_employee" invisible="stage_name in ['New']"/>
                            </group>
                            <group>
                                <field name="date_deadline"/>
                                <field name="priority" widget="priority"/>
                            </group>
                            <group>
                                <field name="work_quarter" options="{'no_create': True}"/>
                                <field name="folder" widget="CopyClipboardChar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" type="html" options="{'collaborative': true}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="activity_ids"/>
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Kanban view -->
        <record id="view_qaco_quarterly_audit_kanban" model="ir.ui.view">
            <field name="name">qaco.quarterly.audit.kanban</field>
            <field name="model">qaco.quarterly.audit</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" default_order="priority desc, sequence asc, id desc" records_draggable="0">
                    <field name="color"/>
                    <field name="stage_id"/>
                    <field name="priority"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                                <div class="o_kanban_record_details">
                                    <strong class="o_kanban_record_title"><field name="client_id"/></strong>
                                    <div><field name="work_quarter"/></div>
                                    <div><field name="employee_id"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search view -->
        <record id="view_qaco_quarterly_audit_search" model="ir.ui.view">
            <field name="name">qaco.quarterly.audit.search</field>
            <field name="model">qaco.quarterly.audit</field>
            <field name="arch" type="xml">
                <search string="Quarterly Audit">
                    <field name="client_id" string="Client" filter_domain="[('client_id.name','ilike',self)]"/>
                    <filter string="My Tasks" name="my_tasks" domain="[('employee_id.user_id','=',uid)]"/>
                    <filter string="Unassigned" name="unassigned" domain="[('employee_id','=',False)]"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="By Stage" name="stage" context="{'group_by':'stage_id'}"/>
                        <filter string="By Quarter" name="quarter" context="{'group_by':'work_quarter'}"/>
                        <filter string="By Employee" name="employee" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>
