<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Rule: restrict visibility of restricted/confidential attachments -->
    <record id="rule_restricted_attachments_visibility" model="ir.rule">
      <field name="name">Restricted Attachments - visibility for partners and managers</field>
      <field name="model_id" ref="qaco_audit.model_audit_attachment" />
      <field name="domain_force">[('confidentiality','=','public')]</field>
      <field name="groups" eval="[(4, ref('qaco_audit.group_audit_partner')), (4, ref('qaco_audit.group_audit_manager')), (4, ref('qaco_audit.group_audit_administrator')), (4, ref('qaco_audit.group_audit_quality_partner'))]" />
    </record>
  </data>
</odoo>