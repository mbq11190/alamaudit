<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Audit Form View to add Quality Review Smart Button -->
        <record id="view_qaco_audit_form_quality_review_button" model="ir.ui.view">
            <field name="name">qaco.audit.form.quality.review.button</field>
            <field name="model">qaco.audit</field>
            <field name="inherit_id" ref="qaco_deliverables.view_qaco_audit_form_deliverables_button"/>
            <field name="arch" type="xml">
                <!-- Add Quality Review button AFTER Deliverables button -->
                <xpath expr="//button[@name='action_open_deliverables']" position="after">
                    <button name="action_open_quality_review" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-check-circle">
                        <field name="quality_review_count" widget="statinfo" string="Quality Review"/>
                        <field name="quality_review_state" invisible="1"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
