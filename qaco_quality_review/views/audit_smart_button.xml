<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Smart button on qaco.audit form -->
        <record id="view_qaco_audit_form_quality_button" model="ir.ui.view">
        <field name="name">qaco.audit.form.quality.button</field>
        <field name="model">qaco.audit</field>
        <field name="inherit_id" ref="qaco_deliverables.view_qaco_audit_form_deliverables_button"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_open_quality_review"
                        icon="fa-star">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Quality</span>
                        <span class="o_stat_text">Review</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
