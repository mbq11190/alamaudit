<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <template id="adjustment_approval_success" name="Adjustment Approval Success">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="card shadow-lg p-4 rounded text-center">
                    <h2 class="text-success">‚úÖ Adjustment Approved Successfully!</h2>
                    <p class="mt-3">The leave adjustment for <strong><t t-esc="adjustment.employee_id.name"/></strong> has been approved.</p>
                    <a t-att-href="adjustment.get_record_url()" class="btn btn-info mt-4" role="button">üìÑ View Request</a>
                </div>
            </div>
        </t>
    </template>

    <template id="adjustment_refuse_form" name="Adjustment Refuse Form">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="card p-4 shadow-lg">
                    <h3 class="text-danger mb-4">‚ùå Reject Leave Adjustment</h3>
                    <div class="mb-4">
                        <p><strong>Employee:</strong> <t t-esc="adjustment.employee_id.name"/></p>
                        <p><strong>Type:</strong> <t t-esc="adjustment.get_adjustment_type_display()"/></p>
                        <p><strong>Days:</strong> <t t-esc="adjustment.adjustment"/></p>
                        <p><strong>Reason:</strong> <t t-esc="adjustment.reason"/></p>
                    </div>
                    
                    <t t-if="error">
                        <div class="alert alert-danger" role="alert">
                            <t t-esc="error"/>
                        </div>
                    </t>
                    
                    <form method="POST" t-att-action="'/leave_adjustment/refuse/' + token">
                        <div class="mb-3">
                            <label for="rejection_reason" class="form-label">Reason for Rejection *</label>
                            <textarea id="rejection_reason" name="rejection_reason" class="form-control" rows="4" 
                                      placeholder="Please provide a detailed reason for rejecting this adjustment..." required="required"></textarea>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">‚úñ Confirm Rejection</button>
                            <a href="/" class="btn btn-secondary" role="button">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <template id="adjustment_rejected" name="Adjustment Rejected">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="card shadow-lg p-4 rounded text-center">
                    <h3 class="text-danger">‚ùå Adjustment Rejected</h3>
                    <p class="mt-3">The leave adjustment for <strong><t t-esc="adjustment.employee_id.name"/></strong> has been rejected.</p>
                    <t t-if="rejection_reason">
                        <div class="alert alert-danger mt-3">
                            <strong>Rejection Reason:</strong>
                            <p class="mb-0"><t t-esc="rejection_reason"/></p>
                        </div>
                    </t>
                    <a t-att-href="adjustment.get_record_url()" class="btn btn-info mt-4" role="button">üìÑ View Request</a>
                </div>
            </div>
        </t>
    </template>

    <template id="adjustment_invalid_token" name="Invalid Adjustment Token">
        <t t-call="website.layout">
            <div class="container my-5 text-center">
                <h2 class="text-warning">‚ö†Ô∏è Invalid or Expired Token</h2>
                <p>The link is not valid or the adjustment has already been processed.</p>
                <t t-if="adjustment">
                    <a t-att-href="adjustment.get_record_url()" class="btn btn-info mt-4" role="button">üìÑ View Request</a>
                </t>
                <t t-else="">
                    <a href="/" class="btn btn-secondary mt-4" role="button">Back to Home</a>
                </t>
            </div>
        </t>
    </template>

    <template id="adjustment_revert_form" name="Adjustment Revert Form">
        <t t-call="website.layout">
            <div class="container my-5">
                <form method="POST" t-att-action="'/leave_adjustment/revert/' + token" class="card p-4 shadow-lg">
                    <div class="mb-3">
                        <div class="o_form_label">Remark</div>
                        <textarea name="remark" class="form-control" required="required"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </t>
    </template>

    <template id="adjustment_reverted" name="Adjustment Reverted">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="card shadow-lg p-4 rounded text-center">
                    <h2 class="text-success">Adjustment Reverted</h2>
                    <p class="mt-3">The adjustment has been reverted to draft.</p>
                    <a t-att-href="adjustment.get_record_url()" class="btn btn-info mt-4" role="button">üìÑ View Request</a>
                </div>
            </div>
        </t>
    </template>

    <template id="adjustment_transfer_form" name="Adjustment Transfer Form">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="card p-4 shadow-lg">
                    <h3 class="text-primary mb-4">üì§ Transfer Approval</h3>
                    <div class="mb-4">
                        <p><strong>Employee:</strong> <t t-esc="adjustment.employee_id.name"/></p>
                        <p><strong>Type:</strong> <t t-esc="adjustment.get_adjustment_type_display()"/></p>
                        <p><strong>Days:</strong> <t t-esc="adjustment.adjustment"/></p>
                        <p><strong>Current Approver:</strong> <t t-esc="current_user.name"/></p>
                    </div>
                    
                    <t t-if="error">
                        <div class="alert alert-danger" role="alert">
                            <t t-esc="error"/>
                        </div>
                    </t>
                    
                    <form method="POST" t-att-action="'/leave_adjustment/transfer/' + token">
                        <div class="mb-3">
                            <label for="new_user_id" class="form-label">Transfer to *</label>
                            <select id="new_user_id" name="new_user_id" class="form-select" required="required">
                                <option value="">-- Select User --</option>
                                <t t-foreach="users" t-as="user">
                                    <t t-if="user.id != current_user.id">
                                        <option t-att-value="user.id"><t t-esc="user.name"/></option>
                                    </t>
                                </t>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="transfer_reason" class="form-label">Reason for Transfer (Optional)</label>
                            <textarea id="transfer_reason" name="transfer_reason" class="form-control" rows="3" 
                                      placeholder="Optionally provide a reason for transferring this approval..."></textarea>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">üì§ Confirm Transfer</button>
                            <a href="/" class="btn btn-secondary" role="button">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <template id="adjustment_transfer_success" name="Adjustment Transfer Success">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="card shadow-lg p-4 rounded text-center">
                    <h3 class="text-success">‚úÖ Approval Transferred Successfully</h3>
                    <p class="mt-3">The leave adjustment approval has been transferred.</p>
                    <div class="alert alert-info mt-3">
                        <p class="mb-0"><strong>From:</strong> <t t-esc="old_user.name"/></p>
                        <p class="mb-0"><strong>To:</strong> <t t-esc="new_user.name"/></p>
                    </div>
                    <a t-att-href="adjustment.get_record_url()" class="btn btn-info mt-4" role="button">üìÑ View Request</a>
                </div>
            </div>
        </t>
    </template>
    </data>
</odoo>

