<odoo>
    <data>
        <record id="action_transfer_cc_recipient" model="ir.actions.act_window">
            <field name="name">Transfer CC Recipients</field>
            <field name="res_model">hr.transfer.cc.recipient</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_transfer_cc_recipient" name="Transfer CC Recipients"
                  parent="hr.menu_hr_root"
                  action="action_transfer_cc_recipient"
                  sequence="20"
                  groups="qaco_employees.group_qaco_employee_administrator"/>

        <record id="view_transfer_cc_recipient_tree" model="ir.ui.view">
            <field name="name">hr.transfer.cc.recipient.tree</field>
            <field name="model">hr.transfer.cc.recipient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_transfer_cc_recipient_form" model="ir.ui.view">
            <field name="name">hr.transfer.cc.recipient.form</field>
            <field name="model">hr.transfer.cc.recipient</field>
            <field name="arch" type="xml">
                <form string="Transfer CC Recipient">
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
