<odoo>
    <data>
        <record id="view_employee_transfer_search" model="ir.ui.view">
            <field name="name">hr.employee.transfer.search</field>
            <field name="model">hr.employee.transfer</field>
            <field name="arch" type="xml">
                <search string="Transfer">
                    <field name="employee_id" string="Employee" filter_domain="[('employee_id.name','ilike',self)]"/>
                    <field name="to_client_id" string="Client" filter_domain="[('to_client_id.name','ilike',self)]"/>
                    <filter string="My Transfers" name="my_transfers" domain="[('employee_id.user_id','=',uid)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="By State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="By Client" name="client" context="{'group_by': 'to_client_id'}"/>
                        <filter string="By Manager" name="manager" context="{'group_by': 'manager_id'}"/>
                        <filter string="By Employee" name="employee" context="{'group_by': 'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_leave_allowance_search" model="ir.ui.view">
            <field name="name">leave.allowance.search</field>
            <field name="model">leave.allowance</field>
            <field name="arch" type="xml">
                <search string="Leave Allowance Search">
                    <field name="employee_id" string="Employee"/>
                    <field name="time_off_type" string="Time Off Type"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="To Approve" name="draft" domain="[('state', '=', 'draft')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Time Off Type" name="group_by_type" context="{'group_by': 'time_off_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_leave_adjustment_search" model="ir.ui.view">
            <field name="name">leave.adjustment.search</field>
            <field name="model">leave.adjustment</field>
            <field name="arch" type="xml">
                <search string="Leave Adjustment Search">
                    <field name="employee_id" string="Employee"/>
                    <field name="adjustment_date" string="Adjustment Date"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <filter string="Reverted" name="reverted" domain="[('state', '=', 'reverted')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Adjustment Date" name="group_by_date" context="{'group_by': 'adjustment_date'}"/>
                    </group>
                </search>
            </field>
        </record>


    </data>
</odoo>
