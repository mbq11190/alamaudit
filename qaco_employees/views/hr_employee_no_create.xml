<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Override HR Employee Form View to Hide Create Button -->
        <record id="view_employee_form_no_create" model="ir.ui.view">
            <field name="name">hr.employee.form.no.create</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <form position="attributes">
                    <attribute name="create">false</attribute>
                </form>
            </field>
        </record>

        <!-- Override HR Employee Tree View to Hide Create Button -->
        <record id="view_employee_tree_no_create" model="ir.ui.view">
            <field name="name">hr.employee.tree.no.create</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="create">false</attribute>
                </tree>
            </field>
        </record>

        <!-- Override HR Employee Kanban View to Hide Create Button -->
        <record id="view_employee_kanban_no_create" model="ir.ui.view">
            <field name="name">hr.employee.kanban.no.create</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <kanban position="attributes">
                    <attribute name="create">false</attribute>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
