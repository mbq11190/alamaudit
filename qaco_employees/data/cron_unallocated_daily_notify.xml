<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action (Cron Job) -->
        <record id="ir_cron_unallocated_employee_email" model="ir.cron">
            <field name="name">Notify Daily Unallocated Employees</field>
            <field name="model_id" ref="hr.model_hr_employee"/>  <!-- Ensure correct reference -->
            <field name="state">code</field>
            <field name="code">model.send_unallocated_employee_email()</field>
            <field name="user_id" ref="base.user_admin"/>  <!-- Runs as Administrator -->
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>  <!-- Runs every 1 day -->
            <field name="numbercall">-1</field>  <!-- Runs indefinitely -->
            <field name="nextcall" eval="(datetime.now() + relativedelta(hours=6)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
