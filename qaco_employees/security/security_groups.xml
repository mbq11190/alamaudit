<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="module_category_qaco_employees" model="ir.module.category">
            <field name="name">QACO Employees Rights</field>
        </record>

        <record id="group_qaco_employee_trainee" model="res.groups">
            <field name="name">Trainee</field>
            <field name="category_id" ref="qaco_employees.module_category_qaco_employees"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_qaco_employee_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="qaco_employees.module_category_qaco_employees"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('hr.group_hr_user')), (4, ref('hr_holidays.group_hr_holidays_user')), (4, ref('qaco_employees.group_qaco_employee_trainee'))]"/>
        </record>

        <record id="group_qaco_employee_hr_manager" model="res.groups">
            <field name="name">HR Manager</field>
            <field name="category_id" ref="qaco_employees.module_category_qaco_employees"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('qaco_employees.group_qaco_employee_manager'))]"/>
        </record>

        <record id="group_qaco_timeoff_manager" model="res.groups">
            <field name="name">Time Off Manager</field>
            <field name="category_id" ref="qaco_employees.module_category_qaco_employees"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('hr_holidays.group_hr_holidays_manager'))]"/>
        </record>

        <record id="group_qaco_employee_partner" model="res.groups">
            <field name="name">Partner</field>
            <field name="category_id" ref="qaco_employees.module_category_qaco_employees"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('hr.group_hr_user')), (4, ref('qaco_employees.group_qaco_employee_hr_manager'))]"/>
        </record>

        <record id="group_qaco_employee_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="qaco_employees.module_category_qaco_employees"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('hr.group_hr_user')), (4, ref('qaco_employees.group_qaco_employee_partner'))]"/>
        </record>
    </data>
</odoo>
