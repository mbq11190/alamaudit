<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone menu + action so onboarding is always reachable (not only via audit smart button). -->
    <record id="action_client_onboarding_all" model="ir.actions.act_window">
        <field name="name">Client Onboarding</field>
        <field name="res_model">qaco.client.onboarding</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a client onboarding record</p>
            <p>Use this menu to review all onboarding records.</p>
        </field>
    </record>

    <menuitem
        id="menu_client_onboarding"
        name="Client Onboarding"
        parent="qaco_audit.menu_root"
        sequence="25"
        action="action_client_onboarding_all"/>
</odoo>
