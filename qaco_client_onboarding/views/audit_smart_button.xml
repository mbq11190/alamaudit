<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Window action for Client Onboarding -->
    <record id="action_client_onboarding" model="ir.actions.act_window">
        <field name="name">Client Onboarding</field>
        <field name="res_model">qaco.client.onboarding</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_client_onboarding_form"/>
        <field name="target">current</field>
        <!-- Pass audit, partner and company defaults when opening from menu -->
        <field name="context">{'default_audit_id': active_id, 'default_partner_id': client_id, 'default_company_id': company_id}</field>
        <field name="domain">[('audit_id', '=', active_id)]</field>
    </record>

    <!-- Smart button on qaco.audit form (Top tab style) -->
    <record id="view_qaco_audit_form_onboarding_button" model="ir.ui.view">
        <field name="name">qaco.audit.form.onboarding.button</field>
        <field name="model">qaco.audit</field>
        <field name="inherit_id" ref="qaco_audit.qaco_audit_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_open_client_onboarding"
                        icon="fa-user-check"
                        invisible="not show_onboarding_tab">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Client</span>
                        <span class="o_stat_text">Onboarding</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
