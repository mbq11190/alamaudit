<odoo>
    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         üìì ONBOARDING NOTEBOOK VIEWS
         Save & Next Functionality with Auto-Save and Session Persistence
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTEBOOK TREE VIEW
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_notebook_tree" model="ir.ui.view">
        <field name="name">qaco.onboarding.notebook.tree</field>
        <field name="model">qaco.onboarding.notebook</field>
        <field name="arch" type="xml">
            <tree string="Notebooks" decoration-info="state == 'draft'" 
                  decoration-warning="state == 'in_progress'" 
                  decoration-success="state == 'completed'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="onboarding_id"/>
                <field name="note_count"/>
                <field name="progress_percentage" widget="progressbar"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_progress'"
                       decoration-success="state == 'completed'"
                       decoration-muted="state == 'archived'"/>
                <field name="last_activity_date"/>
            </tree>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTEBOOK FORM VIEW
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_notebook_form" model="ir.ui.view">
        <field name="name">qaco.onboarding.notebook.form</field>
        <field name="model">qaco.onboarding.notebook</field>
        <field name="arch" type="xml">
            <form string="Notebook">
                <header>
                    <button name="action_create_note" type="object" 
                            string="‚ûï New Note" class="btn-primary" icon="fa-plus"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_notes" icon="fa-sticky-note">
                            <field name="note_count" widget="statinfo" string="Notes"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Notebook Title..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="onboarding_id"/>
                            <field name="audit_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="progress_percentage" widget="progressbar"/>
                            <field name="last_activity_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Describe the purpose of this notebook..."/>
                    </group>
                    <notebook>
                        <page string="üìù Notes" name="notes">
                            <field name="note_ids" mode="tree">
                                <tree editable="bottom" decoration-success="state == 'completed'"
                                      decoration-warning="is_draft">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="summary"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'in_progress'"
                                           decoration-primary="state == 'review'"
                                           decoration-success="state == 'completed'"/>
                                    <field name="is_draft" widget="boolean_toggle" readonly="1"/>
                                    <field name="last_save_date"/>
                                    <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                    <button name="action_save_and_next" type="object" 
                                            string="Save &amp; Next" class="btn-link"
                                            icon="fa-arrow-right"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTEBOOK KANBAN VIEW
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_notebook_kanban" model="ir.ui.view">
        <field name="name">qaco.onboarding.notebook.kanban</field>
        <field name="model">qaco.onboarding.notebook</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="note_count"/>
                <field name="progress_percentage"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill"
                             t-att-style="'border-left: 4px solid ' + kanban_color(record.color.raw_value)">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <span>üìì <field name="name"/></span>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge" t-att-class="{
                                            'bg-info': record.state.raw_value == 'draft',
                                            'bg-warning': record.state.raw_value == 'in_progress',
                                            'bg-success': record.state.raw_value == 'completed',
                                            'bg-secondary': record.state.raw_value == 'archived'
                                        }">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="d-flex justify-content-between">
                                        <span><i class="fa fa-sticky-note"/> <field name="note_count"/> notes</span>
                                        <span><field name="progress_percentage" widget="progressbar"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="last_activity_date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <a t-attf-class="btn btn-sm btn-primary" 
                                           t-attf-href="/web#model=qaco.onboarding.notebook&amp;id=#{record.id.raw_value}&amp;view_type=form">
                                            Open
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTEBOOK SEARCH VIEW
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_notebook_search" model="ir.ui.view">
        <field name="name">qaco.onboarding.notebook.search</field>
        <field name="model">qaco.onboarding.notebook</field>
        <field name="arch" type="xml">
            <search string="Search Notebooks">
                <field name="name"/>
                <field name="onboarding_id"/>
                <field name="audit_id"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="filter_in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="filter_completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="My Notebooks" name="filter_mine" domain="[('create_uid', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Onboarding" name="group_onboarding" context="{'group_by': 'onboarding_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTEBOOK ACTION
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="action_onboarding_notebook" model="ir.actions.act_window">
        <field name="name">Notebooks</field>
        <field name="res_model">qaco.onboarding.notebook</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_onboarding_notebook_search"/>
        <field name="context">{'search_default_filter_mine': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first notebook!
            </p>
            <p>
                Organize your notes with notebooks. Use Save &amp; Next to quickly navigate through notes.
            </p>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         üìù ONBOARDING NOTE VIEWS
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTE TREE VIEW
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_note_tree" model="ir.ui.view">
        <field name="name">qaco.onboarding.note.tree</field>
        <field name="model">qaco.onboarding.note</field>
        <field name="arch" type="xml">
            <tree string="Notes" decoration-warning="is_draft" 
                  decoration-success="state == 'completed'"
                  decoration-info="has_draft_recovery">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="notebook_id"/>
                <field name="summary"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_progress'"
                       decoration-primary="state == 'review'"
                       decoration-success="state == 'completed'"/>
                <field name="is_draft" string="Unsaved" widget="boolean_toggle" readonly="1"/>
                <field name="has_draft_recovery" string="Recovery" invisible="1"/>
                <field name="last_save_date"/>
                <field name="assigned_user_id" widget="many2one_avatar_user"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTE FORM VIEW (Main - with Save & Next)
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_note_form" model="ir.ui.view">
        <field name="name">qaco.onboarding.note.form</field>
        <field name="model">qaco.onboarding.note</field>
        <field name="arch" type="xml">
            <form string="Note" class="o_note_form">
                <header>
                    <!-- Save & Next Button Group (Primary Actions) -->
                    <button name="action_save_and_previous" type="object" 
                            string="‚¨ÖÔ∏è Save &amp; Previous" class="btn-secondary"
                            icon="fa-arrow-left"
                            invisible="not prev_note_id"/>
                    <button name="action_save" type="object" 
                            string="üíæ Save" class="btn-primary"
                            icon="fa-save"/>
                    <button name="action_save_and_next" type="object" 
                            string="Save &amp; Next ‚û°Ô∏è" class="btn-success"
                            icon="fa-arrow-right"/>
                    <button name="action_save_draft" type="object" 
                            string="üìù Save Draft" class="btn-warning"
                            icon="fa-floppy-o"
                            invisible="not is_draft"/>
                    <separator/>
                    <button name="action_mark_complete" type="object"
                            string="‚úÖ Mark Complete" class="btn-info"
                            invisible="state == 'completed'"/>
                    <button name="action_reopen" type="object"
                            string="üîÑ Reopen" class="btn-secondary"
                            invisible="state != 'completed'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,in_progress,review,completed"/>
                </header>
                <sheet>
                    <!-- Draft Recovery Alert -->
                    <div class="alert alert-info o_draft_recovery_alert" 
                         invisible="not has_draft_recovery"
                         style="margin-bottom: 16px;">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <i class="fa fa-info-circle fa-lg me-2"/>
                                <strong>Auto-saved draft available!</strong>
                                <span class="text-muted ms-2">
                                    Last auto-saved: <field name="last_auto_save_date" readonly="1"/>
                                </span>
                            </div>
                            <button name="action_restore_draft" type="object" 
                                    string="Restore Draft" class="btn btn-sm btn-primary"/>
                        </div>
                    </div>

                    <!-- Note Position Indicator -->
                    <div class="o_note_position_bar" style="background: #f8f9fa; padding: 12px 16px; 
                         border-radius: 8px; margin-bottom: 16px; display: flex; 
                         justify-content: space-between; align-items: center;">
                        <div>
                            <span class="badge bg-primary" style="font-size: 14px;">
                                <field name="note_position" readonly="1"/>
                            </span>
                            <span class="text-muted ms-2">in</span>
                            <field name="notebook_id" readonly="1" class="ms-1"/>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="text-muted small">
                                <i class="fa fa-save me-1"/>
                                Last saved: <field name="last_save_date" readonly="1"/>
                            </span>
                            <span class="badge bg-secondary">
                                <field name="save_count" readonly="1"/> saves
                            </span>
                        </div>
                    </div>

                    <!-- Button Box -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_save_and_previous"
                                icon="fa-arrow-left" invisible="not prev_note_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Previous</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_save_and_next"
                                icon="fa-arrow-right">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Next</span>
                            </div>
                        </button>
                    </div>

                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Note Title..." 
                                   style="font-size: 24px; font-weight: 600;"/>
                        </h1>
                    </div>

                    <!-- Metadata Group -->
                    <group col="4">
                        <field name="assigned_user_id" widget="many2one_avatar_user"/>
                        <field name="priority" widget="priority"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <field name="is_draft" widget="boolean_toggle" readonly="1"/>
                    </group>

                    <!-- Summary -->
                    <group>
                        <field name="summary" placeholder="Brief summary of this note..."/>
                    </group>

                    <!-- Main Content -->
                    <separator string="Note Content"/>
                    <field name="content" widget="html" 
                           placeholder="Start writing your note here..."
                           options="{'collaborative': false, 'resizable': true}"
                           style="min-height: 300px;"/>

                    <!-- Navigation Footer -->
                    <div class="o_note_navigation_footer" style="margin-top: 24px; padding: 16px; 
                         background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                         border-radius: 12px; color: white;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div invisible="not prev_note_id">
                                <button name="action_save_and_previous" type="object" 
                                        class="btn btn-outline-light">
                                    <i class="fa fa-arrow-left"/> Previous Note
                                </button>
                            </div>
                            <div class="text-center">
                                <span style="font-size: 18px; font-weight: 600;">
                                    üìù <field name="note_position" readonly="1"/>
                                </span>
                            </div>
                            <div>
                                <button name="action_save_and_next" type="object" 
                                        class="btn btn-light">
                                    Next Note <i class="fa fa-arrow-right"/>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Hidden fields for navigation -->
                    <field name="prev_note_id" invisible="1"/>
                    <field name="next_note_id" invisible="1"/>
                    <field name="has_draft_recovery" invisible="1"/>
                    <field name="draft_content" invisible="1"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTE KANBAN VIEW
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_note_kanban" model="ir.ui.view">
        <field name="name">qaco.onboarding.note.kanban</field>
        <field name="model">qaco.onboarding.note</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="summary"/>
                <field name="state"/>
                <field name="is_draft"/>
                <field name="color"/>
                <field name="priority"/>
                <field name="tag_ids"/>
                <field name="assigned_user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click"
                             t-att-style="'border-left: 4px solid ' + (record.is_draft.raw_value ? '#f39c12' : kanban_color(record.color.raw_value))">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="priority" widget="priority"/>
                                            <span class="ms-2"><field name="name"/></span>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <t t-if="record.is_draft.raw_value">
                                            <span class="badge bg-warning">Draft</span>
                                        </t>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="summary"/>
                                    <div class="mt-2">
                                        <field name="tag_ids" widget="many2many_tags" 
                                               options="{'color_field': 'color'}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {'draft': 'info', 'in_progress': 'warning', 'review': 'primary', 'completed': 'success'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         NOTE SEARCH VIEW
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_onboarding_note_search" model="ir.ui.view">
        <field name="name">qaco.onboarding.note.search</field>
        <field name="model">qaco.onboarding.note</field>
        <field name="arch" type="xml">
            <search string="Search Notes">
                <field name="name"/>
                <field name="summary"/>
                <field name="plain_content"/>
                <field name="notebook_id"/>
                <field name="tag_ids"/>
                <field name="assigned_user_id"/>
                <filter string="Drafts" name="filter_drafts" domain="[('is_draft', '=', True)]"/>
                <filter string="Has Recovery" name="filter_recovery" domain="[('has_draft_recovery', '=', True)]"/>
                <separator/>
                <filter string="Draft Status" name="filter_draft_state" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="filter_in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="filter_completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="My Notes" name="filter_mine" domain="[('assigned_user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Notebook" name="group_notebook" context="{'group_by': 'notebook_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Assigned To" name="group_user" context="{'group_by': 'assigned_user_id'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

