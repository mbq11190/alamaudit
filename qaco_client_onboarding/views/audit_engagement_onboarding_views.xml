<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_qaco_audit_engagement_onboarding_button" model="ir.ui.view">
            <field name="name">qaco.audit.engagement.form.onboarding.button</field>
            <field name="model">qaco.audit.engagement</field>
            <field name="inherit_id" ref="view_qaco_audit_engagement_form"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="onboarding_in_progress" invisible="1"/>
                </field>
                <xpath expr="//header" position="inside">
                    <button name="action_open_onboarding"
                            type="object"
                            string="Open Onboarding"
                            class="oe_highlight"
                            invisible="not onboarding_in_progress"/>
                    <button name="action_open_onboarding"
                            type="object"
                            string="Create Onboarding"
                            invisible="onboarding_in_progress"
                            icon="fa-plus"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>