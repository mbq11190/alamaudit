<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Template Categories -->
        <record id="template_category_client_onboarding" model="qaco.onboarding.template.category">
            <field name="name">A. Client Onboarding &amp; Administration</field>
            <field name="code">client_onboarding</field>
            <field name="sequence">10</field>
        </record>

        <record id="template_category_professional_clearance" model="qaco.onboarding.template.category">
            <field name="name">B. Professional Clearance &amp; Communication</field>
            <field name="code">professional_clearance</field>
            <field name="sequence">20</field>
        </record>

        <record id="template_category_audit_assurance" model="qaco.onboarding.template.category">
            <field name="name">C. Audit &amp; Assurance Engagement</field>
            <field name="code">audit_assurance</field>
            <field name="sequence">30</field>
        </record>

        <record id="template_category_tax_engagements" model="qaco.onboarding.template.category">
            <field name="name">D. Tax Engagements</field>
            <field name="code">tax_engagements</field>
            <field name="sequence">40</field>
        </record>

        <record id="template_category_other_letters" model="qaco.onboarding.template.category">
            <field name="name">E. Other Standard Letters &amp; Confirmations</field>
            <field name="code">other_letters</field>
            <field name="sequence">50</field>
        </record>

        <!-- A. Client Onboarding & Administration Templates -->
        <record id="template_client_onboarding_checklist" model="qaco.onboarding.template.document">
            <field name="name">Client Onboarding Checklist</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">10</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes_hard_stop</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Standard checklist for new client onboarding procedures.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_legal_identity_info" model="qaco.onboarding.template.document">
            <field name="name">Legal Identity Information Form</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">11</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes_hard_stop</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Captures core profile, statutory numbers, and authorised signatories as per section 1.1.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_new_client_acceptance" model="qaco.onboarding.template.document">
            <field name="name">New Client Acceptance Form (ISA 210)</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">20</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes_hard_stop</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Form for documenting new client acceptance decisions per ISA 210.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_engagement_setup_sheet" model="qaco.onboarding.template.document">
            <field name="name">Client Engagement Setup Sheet</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">30</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Engagement setup and administrative details sheet.</field>
            <field name="file_type">docx</field>
        </record>
        <!-- B. Professional Clearance & Communication Templates -->
        <record id="template_link_letter" model="qaco.onboarding.template.document">
            <field name="name">Link Letter (Request for Professional Clearance)</field>
            <field name="category_id" ref="template_category_professional_clearance"/>
            <field name="sequence">10</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">conditional</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Letter to request professional clearance from predecessor auditor.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_professional_clearance_response" model="qaco.onboarding.template.document">
            <field name="name">Response to Professional Clearance Request</field>
            <field name="category_id" ref="template_category_professional_clearance"/>
            <field name="sequence">20</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">conditional</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Standard response template for professional clearance requests received.</field>
            <field name="file_type">docx</field>
        </record>

        <!-- C. Audit & Assurance Engagement Templates -->
        <record id="template_audit_engagement_letter" model="qaco.onboarding.template.document">
            <field name="name">Audit Engagement Letter</field>
            <field name="category_id" ref="template_category_audit_assurance"/>
            <field name="sequence">10</field>
            <field name="description">Standard audit engagement letter per ISA 210.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_review_engagement_letter" model="qaco.onboarding.template.document">
            <field name="name">Review Engagement Letter</field>
            <field name="category_id" ref="template_category_audit_assurance"/>
            <field name="sequence">20</field>
            <field name="description">Engagement letter for review engagements per ISRE 2400.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_compilation_engagement_letter" model="qaco.onboarding.template.document">
            <field name="name">Compilation Engagement Letter</field>
            <field name="category_id" ref="template_category_audit_assurance"/>
            <field name="sequence">30</field>
            <field name="description">Engagement letter for compilation engagements per ISRS 4410.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_opening_balance_verification" model="qaco.onboarding.template.document">
            <field name="name">Letter for Verification of Opening Balances</field>
            <field name="category_id" ref="template_category_audit_assurance"/>
            <field name="sequence">40</field>
            <field name="description">Request letter for opening balance verification from predecessor.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_management_representation_letter" model="qaco.onboarding.template.document">
            <field name="name">Management Representation Letter (Draft)</field>
            <field name="category_id" ref="template_category_audit_assurance"/>
            <field name="sequence">50</field>
            <field name="description">Draft management representation letter per ISA 580.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_audit_committee_communication" model="qaco.onboarding.template.document">
            <field name="name">Audit Committee Communication Letter</field>
            <field name="category_id" ref="template_category_audit_assurance"/>
            <field name="sequence">60</field>
            <field name="description">Communication letter to those charged with governance per ISA 260.</field>
            <field name="file_type">docx</field>
        </record>

        <!-- D. Tax Engagements Templates -->
        <record id="template_tax_compliance_engagement" model="qaco.onboarding.template.document">
            <field name="name">Tax Compliance Engagement Letter</field>
            <field name="category_id" ref="template_category_tax_engagements"/>
            <field name="sequence">10</field>
            <field name="description">Engagement letter for tax compliance services.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_tax_advisory_engagement" model="qaco.onboarding.template.document">
            <field name="name">Tax Advisory Engagement Letter</field>
            <field name="category_id" ref="template_category_tax_engagements"/>
            <field name="sequence">20</field>
            <field name="description">Engagement letter for tax advisory services.</field>
            <field name="file_type">docx</field>
        </record>

        <!-- E. Other Standard Letters & Confirmations Templates -->
        <record id="template_independence_confirmation" model="qaco.onboarding.template.document">
            <field name="name">Independence Declaration (Partner/Team)</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">10</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes_hard_stop</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Independence declaration for partner and engagement team.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_terms_of_business" model="qaco.onboarding.template.document">
            <field name="name">Client Terms of Business</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">20</field>
            <field name="description">Standard terms of business agreement with clients.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_non_engagement_letter" model="qaco.onboarding.template.document">
            <field name="name">Letter of Non-Engagement</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">30</field>
            <field name="description">Letter to communicate decision not to accept engagement.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_pbc_list" model="qaco.onboarding.template.document">
            <field name="name">Document Request List (PBC List)</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">40</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Prepared By Client (PBC) document request checklist.</field>
            <field name="file_type">docx</field>
        </record>

        <!-- Supplemental templates mapping to user request under 1.0 -->
        <record id="template_client_addresses" model="qaco.onboarding.template.document">
            <field name="name">Addresses &amp; Branches Register</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">40</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Register of client addresses and branch locations.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_authorized_signatories" model="qaco.onboarding.template.document">
            <field name="name">Authorized Signatories Confirmation</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">50</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Confirmation of authorized signatories for bank and legal documents.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_ownership_ubo_declaration" model="qaco.onboarding.template.document">
            <field name="name">Ownership &amp; UBO Declaration</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">50</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Declaration of ownership structure and ultimate beneficial owners.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_board_key_management" model="qaco.onboarding.template.document">
            <field name="name">Board &amp; Key Management List</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">60</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">List of board members and key management personnel.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_related_parties" model="qaco.onboarding.template.document">
            <field name="name">Related Parties Declaration (ISA 550)</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">70</field>
            <field name="stage">throughout_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Disclosure of related parties per ISA 550.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_regulatory_licenses" model="qaco.onboarding.template.document">
            <field name="name">Regulatory Licenses Register</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">80</field>
            <field name="stage">throughout_onboarding</field>
            <field name="mandatory">as_applicable</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Register of regulatory licenses and permits.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_statutory_filings" model="qaco.onboarding.template.document">
            <field name="name">Statutory Filings Tracker</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">90</field>
            <field name="stage">throughout_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Tracker for statutory filings and compliance deadlines.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_litigation" model="qaco.onboarding.template.document">
            <field name="name">Litigation &amp; Contingencies Summary</field>
            <field name="category_id" ref="template_category_other_letters"/>
            <field name="sequence">100</field>
            <field name="stage">throughout_onboarding</field>
            <field name="mandatory">yes</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Summary of litigation and contingent liabilities.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_data_access_form" model="qaco.onboarding.template.document">
            <field name="name">Data Access &amp; IT Consent Form</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">110</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">conditional</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Consent for data access and IT system connectivity.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_nda" model="qaco.onboarding.template.document">
            <field name="name">NDA / Confidentiality Agreement</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">120</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">conditional</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Non-disclosure/confidentiality agreement with client.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_final_authorization" model="qaco.onboarding.template.document">
            <field name="name">Final Authorization &amp; Engagement Approval Sheet</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">130</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">yes_hard_stop</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Final approval sheet for partner authorization and engagement acceptance.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_specimen_signature" model="qaco.onboarding.template.document">
            <field name="name">Specimen Signature Sheet</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">140</field>
            <field name="stage">pre_onboarding</field>
            <field name="mandatory">conditional</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Collect specimen signatures for authorised signatories; required when confirmations will be signed.</field>
            <field name="file_type">docx</field>
        </record>

        <record id="template_legal_documents_index" model="qaco.onboarding.template.document">
            <field name="name">Legal Documents Index</field>
            <field name="category_id" ref="template_category_client_onboarding"/>
            <field name="sequence">150</field>
            <field name="stage">throughout_onboarding</field>
            <field name="mandatory">as_applicable</field>
            <field name="requires_working_paper">1</field>
            <field name="description">Index of legal documents uploaded for this onboarding; use to drive completeness % and reminders.</field>
            <field name="file_type">docx</field>
        </record>
    </data>
</odoo>
