<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_substantive_test_tree" model="ir.ui.view">
        <field name="name">audit.substantive.test.tree</field>
        <field name="model">audit.substantive.test</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="account_head"/>
                <field name="assertion"/>
                <field name="procedure_template"/>
                <field name="conclusion_status" widget="statusbar"/>
            </tree>
        </field>
    </record>

    <record id="view_substantive_test_form" model="ir.ui.view">
        <field name="name">audit.substantive.test.form</field>
        <field name="model">audit.substantive.test</field>
        <field name="arch" type="xml">
            <form string="Substantive Procedure">
                <header>
                    <button name="ai_design_test_of_details" string="AI Design" type="object" class="btn-secondary"/>
                    <button name="ai_review_evidence_and_summarize" string="AI Summarise" type="object" class="btn-secondary"/>
                    <button name="ai_flag_inconsistencies" string="AI Flag" type="object" class="btn-secondary"/>
                    <field name="conclusion_status" widget="statusbar" statusbar_visible="draft,satisfactory,exceptions"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="account_head"/>
                            <field name="procedure_template"/>
                            <field name="assertion"/>
                        </group>
                        <group>
                            <field name="sampling_method"/>
                            <field name="assigned_user_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Test Description">
                            <field name="test_description" nolabel="1"/>
                        </page>
                        <page string="Results">
                            <field name="results" nolabel="1"/>
                        </page>
                        <page string="Evidence">
                            <field name="evidence_document_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter></chatter>
            </form>
        </field>
    </record>

    <record id="action_substantive_tests" model="ir.actions.act_window">
        <field name="name">Substantive Procedures</field>
        <field name="res_model">audit.substantive.test</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
