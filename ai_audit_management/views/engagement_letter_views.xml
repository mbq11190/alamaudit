<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_engagement_letter_tree" model="ir.ui.view">
        <field name="name">audit.engagement.letter.tree</field>
        <field name="model">audit.engagement.letter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_id"/>
                <field name="scope_of_audit"/>
                <field name="laws_applicable"/>
                <field name="fee"/>
                <field name="approval_status" widget="statusbar"/>
            </tree>
        </field>
    </record>

    <record id="view_engagement_letter_form" model="ir.ui.view">
        <field name="name">audit.engagement.letter.form</field>
        <field name="model">audit.engagement.letter</field>
        <field name="arch" type="xml">
            <form string="Engagement Letter">
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_approve" string="Approve" type="object" invisible="state != 'under_review'" class="btn-success"/>
                    <button name="action_ai_draft_letter" string="AI Draft" type="object" class="btn-secondary"/>
                    <button name="action_print_letter" string="Print" type="object" class="btn-secondary"/>
                    <field name="approval_status" widget="statusbar" statusbar_visible="draft,under_review,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="client_acceptance_id" readonly="1"/>
                            <field name="laws_applicable"/>
                            <field name="fee"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="assigned_user_ids" widget="many2many_tags"/>
                            <field name="scope_of_audit" nolabel="1" placeholder="Describe audit scope"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Letter Body">
                            <field name="letter_body" nolabel="1" widget="html"/>
                        </page>
                        <page string="Attachments">
                            <field name="generated_pdf" filename="name"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter></chatter>
            </form>
        </field>
    </record>

    <record id="action_engagement_letters" model="ir.actions.act_window">
        <field name="name">Engagement Letters</field>
        <field name="res_model">audit.engagement.letter</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
