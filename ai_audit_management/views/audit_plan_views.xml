<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_audit_plan_tree" model="ir.ui.view">
        <field name="name">audit.plan.tree</field>
        <field name="model">audit.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_id"/>
                <field name="financial_year"/>
                <field name="overall_materiality"/>
                <field name="performance_materiality"/>
                <field name="approval_state" widget="statusbar"/>
            </tree>
        </field>
    </record>

    <record id="view_audit_plan_form" model="ir.ui.view">
        <field name="name">audit.plan.form</field>
        <field name="model">audit.plan</field>
        <field name="arch" type="xml">
            <form string="Audit Plan">
                <header>
                    <button name="action_submit_for_approval" string="Submit" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_mark_approved" string="Approve" type="object" invisible="state != 'submitted'" class="btn-success"/>
                    <button name="ai_calculate_materiality" string="AI Materiality" type="object" class="btn-secondary"/>
                    <button name="ai_generate_audit_plan" string="AI Plan" type="object" class="btn-secondary"/>
                    <button name="ai_identify_risks_from_uploaded_docs" string="AI Risk" type="object" class="btn-secondary"/>
                    <field name="approval_state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="financial_year"/>
                            <field name="assigned_user_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="overall_materiality"/>
                            <field name="performance_materiality"/>
                        </group>
                    </group>
                    <div class="o_form_field o_accordion">
                        <div class="o_accordion_item">
                            <h3>Understanding the Entity</h3>
                            <field name="entity_understanding" nolabel="1"/>
                        </div>
                        <div class="o_accordion_item">
                            <h3>Risk Assessment Summary</h3>
                            <field name="risk_assessment_summary" nolabel="1"/>
                        </div>
                        <div class="o_accordion_item">
                            <h3>Planned Procedures</h3>
                            <field name="planned_procedures_text" nolabel="1"/>
                        </div>
                    </div>
                    <group>
                        <field name="team_assignments" widget="many2many_tags"/>
                        <field name="document_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <chatter></chatter>
            </form>
        </field>
    </record>

    <record id="action_audit_plan" model="ir.actions.act_window">
        <field name="name">Audit Plans</field>
        <field name="res_model">audit.plan</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
