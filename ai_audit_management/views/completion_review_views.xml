<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_completion_review_tree" model="ir.ui.view">
        <field name="name">audit.completion.review.tree</field>
        <field name="model">audit.completion.review</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="going_concern_assessment"/>
                <field name="partner_review_notes"/>
            </tree>
        </field>
    </record>

    <record id="view_completion_review_form" model="ir.ui.view">
        <field name="name">audit.completion.review.form</field>
        <field name="model">audit.completion.review</field>
        <field name="arch" type="xml">
            <form string="Completion &amp; Review">
                <header>
                    <button name="ai_generate_management_rep_letter" string="AI Rep Letter" type="object" class="btn-secondary"/>
                    <button name="ai_review_misstatements_materiality" string="AI Materiality" type="object" class="btn-secondary"/>
                    <button name="ai_generate_TCWG_report" string="AI TCWG Report" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="subsequent_events_review" nolabel="1" placeholder="ISA 560 review"/>
                            <field name="going_concern_assessment" nolabel="1" placeholder="ISA 570 assessment"/>
                        </group>
                        <group>
                            <field name="assigned_user_ids" widget="many2many_tags"/>
                            <field name="partner_review_notes" nolabel="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Analytics">
                            <field name="final_analytics" nolabel="1"/>
                        </page>
                        <page string="Misstatements">
                            <field name="misstatement_summary_file" widget="many2many_binary"/>
                        </page>
                        <page string="TCWG Report">
                            <field name="tcwg_report_html" nolabel="1" widget="html"/>
                        </page>
                        <page string="Management Letter">
                            <field name="management_rep_letter_pdf" filename="name"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter></chatter>
            </form>
        </field>
    </record>

    <record id="action_completion_review" model="ir.actions.act_window">
        <field name="name">Completion &amp; Review</field>
        <field name="res_model">audit.completion.review</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
