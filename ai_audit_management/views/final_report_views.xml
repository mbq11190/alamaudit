<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_final_report_tree" model="ir.ui.view">
        <field name="name">audit.final.report.tree</field>
        <field name="model">audit.final.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_id"/>
                <field name="report_type"/>
            </tree>
        </field>
    </record>

    <record id="view_final_report_form" model="ir.ui.view">
        <field name="name">audit.final.report.form</field>
        <field name="model">audit.final.report</field>
        <field name="arch" type="xml">
            <form string="Audit Report">
                <header>
                    <button name="ai_draft_audit_opinion" string="AI Draft" type="object" class="btn-secondary"/>
                    <button name="ai_generate_KAMs_from_workpapers" string="AI KAM" type="object" class="btn-secondary"/>
                    <button name="ai_quality_check_ISA_compliance" string="AI QA" type="object" class="btn-secondary"/>
                    <button name="action_print_report" string="Print" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="report_type"/>
                        </group>
                        <group>
                            <field name="assigned_user_ids" widget="many2many_tags"/>
                            <field name="final_pdf_report" filename="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Opinion">
                            <field name="opinion_text" widget="html" nolabel="1"/>
                        </page>
                        <page string="KAMs">
                            <field name="key_audit_matter_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="response"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Quality Notes">
                            <field name="isa_quality_notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter></chatter>
            </form>
        </field>
    </record>

    <record id="action_final_reports" model="ir.actions.act_window">
        <field name="name">Final Reports</field>
        <field name="res_model">audit.final.report</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
