<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ai_settings_tree" model="ir.ui.view">
        <field name="name">audit.ai.settings.tree</field>
        <field name="model">audit.ai.settings</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_version"/>
                <field name="temperature"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_ai_settings_form" model="ir.ui.view">
        <field name="name">audit.ai.settings.form</field>
        <field name="model">audit.ai.settings</field>
        <field name="arch" type="xml">
            <form string="AI Configuration">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="openai_api_key" password="True"/>
                        <field name="model_version"/>
                        <field name="temperature"/>
                        <field name="active"/>
                    </group>
                </sheet>
                <chatter></chatter>
            </form>
        </field>
    </record>

    <record id="action_ai_settings" model="ir.actions.act_window">
        <field name="name">AI Settings</field>
        <field name="res_model">audit.ai.settings</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
